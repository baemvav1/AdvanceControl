<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Advance_Control.Views.ClientesView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:converters="using:Advance_Control.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="using:Advance_Control.Views" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:LevelToBackgroundConverter x:Key="LevelToBackgroundConverter" />
        <converters:LevelToForegroundConverter x:Key="LevelToForegroundConverter" />
        <converters:BooleanToCornerRadiusConverter x:Key="BooleanToCornerRadiusConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToExpandTextConverter x:Key="BooleanToExpandTextConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0" Margin="0,0,0,24" Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock
                    FontSize="32" FontWeight="Bold" Text="Clientes" />
                <Button
                    x:Name="Nuevo" VerticalAlignment="Center" Background="Transparent" BorderThickness="0"
                    Click="NuevoButton_Click" ToolTipService.ToolTip="Crear nuevo cliente">
                    <SymbolIcon Symbol="Add" />
                </Button>
            </StackPanel>
            <TextBlock
                FontSize="16"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="Gestión de clientes del sistema" />
        </StackPanel>

        <!--  Filtros  -->
        <StackPanel
            Grid.Row="1" Margin="0,0,0,16" Spacing="12">
            <TextBlock
                FontSize="16" FontWeight="SemiBold" Text="Filtros de búsqueda" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBox
                    Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" Header="Búsqueda"
                    PlaceholderText="Razón social o nombre comercial"
                    Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="0" Grid.Column="1" Margin="0,0,8,8" Header="RFC"
                    PlaceholderText="RFC del cliente"
                    Text="{x:Bind ViewModel.RfcFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="0" Grid.Column="2" Margin="0,0,8,8" Header="CURP"
                    PlaceholderText="CURP del cliente"
                    Text="{x:Bind ViewModel.CurpFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" Header="Notas"
                    PlaceholderText="Búsqueda en notas"
                    Text="{x:Bind ViewModel.NotasFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


                <!--  Value="{x:Bind ViewModel.PrioridadFilter, Mode=TwoWay}"  -->

                <NumberBox
                    Grid.Row="1" Grid.Column="1" Margin="0,0,8,8" Header="Prioridad"
                    Minimum="0" PlaceholderText="Prioridad exacta" SpinButtonPlacementMode="Inline" />

                <StackPanel
                    Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" Orientation="Horizontal" Spacing="8">
                    <Button
                        Click="SearchButton_Click" Content="Buscar"
                        Style="{StaticResource AccentButtonStyle}" />
                    <Button Click="ClearButton_Click" Content="Limpiar" />
                </StackPanel>
            </Grid>
        </StackPanel>

        <!--  Lista de clientes  -->
        <Grid Grid.Row="2">
            <!--  Loading indicator  -->
            <ProgressRing
                Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />

            <!--  ItemsRepeater con ScrollViewer  -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Customers, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="0" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate xmlns:local="using:Advance_Control.Models" x:DataType="local:CustomerDto">
                            <Grid Margin="0,5,20,5">
                                <StackPanel Orientation="Vertical">
                                    <Grid
                                        Grid.Row="0" MinHeight="90" Padding="16"
                                        Background="{x:Bind Prioridad, Converter={StaticResource LevelToBackgroundConverter}}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,0,0,1" 
                                        CornerRadius="{x:Bind Expand, Converter={StaticResource BooleanToCornerRadiusConverter}, ConverterParameter='8,8,0,0|8', Mode=OneWay}"
                                        Tapped="HeadGrid_Tapped"
                                        Tag="{x:Bind}"
                                        x:Name="Head">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Información principal del cliente  -->
                                        <StackPanel Grid.Column="0" Spacing="6">
                                            <TextBlock
                                                FontSize="16" FontWeight="SemiBold"
                                                Foreground="{x:Bind Prioridad, Converter={StaticResource LevelToForegroundConverter}}"
                                                Text="{x:Bind RazonSocial}" />
                                            <TextBlock
                                                FontSize="14"
                                                Foreground="{x:Bind Prioridad, Converter={StaticResource LevelToForegroundConverter}}"
                                                Text="{x:Bind NombreComercial}" />
                                            <StackPanel Orientation="Horizontal" Spacing="20">
                                                <TextBlock FontSize="13" Foreground="{x:Bind Prioridad, Converter={StaticResource LevelToForegroundConverter}}">
                                                    <Run Text="RFC: " />
                                                    <Run FontWeight="SemiBold" Text="{x:Bind Rfc}" />
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <!--  Botón para expandir/colapsar  -->
                                        <Button
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="ToggleExpandButton_Click"
                                            Tag="{x:Bind}"
                                            Content="{x:Bind Expand, Converter={StaticResource BooleanToExpandTextConverter}, Mode=OneWay}" />
                                    </Grid>
                                    <Grid
                                        Grid.Row="1" 
                                        Background="Black" 
                                        CornerRadius="{x:Bind Expand, Converter={StaticResource BooleanToCornerRadiusConverter}, ConverterParameter='0,0,8,8|0', Mode=OneWay}"
                                        Visibility="{x:Bind Expand, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"
                                        Padding="8"
                                        x:Name="Body">
                                        <Pivot>
                                            <!-- Información Fiscal y Legal -->
                                            <PivotItem Header="Fiscal y Legal">
                                                <Grid Padding="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    
                                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,4,8,0">
                                                        <TextBlock FontSize="12" Foreground="Gray" Text="Régimen Fiscal:" />
                                                        <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind RegimenFiscal}" TextWrapping="Wrap" />
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,4,0,0">
                                                        <TextBlock FontSize="12" Foreground="Gray" Text="Uso CFDI:" />
                                                        <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind UsoCfdi}" TextWrapping="Wrap" />
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,4,8,0">
                                                        <TextBlock FontSize="12" Foreground="Gray" Text="Estatus:" />
                                                        <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind Estatus}" />
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,4,0,0">
                                                        <TextBlock FontSize="12" Foreground="Gray" Text="ID Cliente:" />
                                                        <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind IdCliente}" />
                                                    </StackPanel>
                                                </Grid>
                                            </PivotItem>
                                            
                                            <!-- Información de Crédito -->
                                            <PivotItem Header="Crédito">
                                                <Grid Padding="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <StackPanel Grid.Column="0" Margin="0,4,8,0">
                                                        <TextBlock FontSize="12" Foreground="Gray" Text="Días de Crédito:" />
                                                        <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind DiasCredito}" />
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Column="1" Margin="0,4,0,0">
                                                        <TextBlock FontSize="12" Foreground="Gray" Text="Límite de Crédito:" />
                                                        <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind LimiteCredito}" />
                                                    </StackPanel>
                                                </Grid>
                                            </PivotItem>
                                            
                                            <!-- Notas -->
                                            <PivotItem Header="Notas">
                                                <StackPanel Padding="8">
                                                    <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind Notas}" TextWrapping="Wrap" />
                                                </StackPanel>
                                            </PivotItem>
                                            
                                            <!-- Información de Auditoría -->
                                            <PivotItem Header="Auditoría">
                                                <Grid Padding="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    
                                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,4,8,0">
                                                        <TextBlock FontSize="12" Foreground="Gray" Text="Creado En:" />
                                                        <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind CreadoEn}" />
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,4,0,0">
                                                        <TextBlock FontSize="12" Foreground="Gray" Text="ID Usuario Creador:" />
                                                        <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind IdUsuarioCreador}" />
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,4,8,0">
                                                        <TextBlock FontSize="12" Foreground="Gray" Text="Actualizado En:" />
                                                        <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind ActualizadoEn}" />
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,4,0,0">
                                                        <TextBlock FontSize="12" Foreground="Gray" Text="ID Usuario Actualizador:" />
                                                        <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind IdUsuarioAct}" />
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,4,8,0">
                                                        <TextBlock FontSize="12" Foreground="Gray" Text="Credencial ID:" />
                                                        <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind CredencialId}" />
                                                    </StackPanel>
                                                </Grid>
                                            </PivotItem>

                                            <PivotItem Header="Facturas">
                                                
                                            </PivotItem>

                                            <!-- Acciones -->
                                            <PivotItem Header="Acciones">
                                                <StackPanel
                                                    Padding="8" Orientation="Horizontal" Spacing="8">
                                                    <Button
                                                        Click="EditClienteButton_Click" Content="Editar"
                                                        Tag="{x:Bind}"
                                                        ToolTipService.ToolTip="Editar cliente" />
                                                    <Button
                                                        Click="DeleteClienteButton_Click" Content="Eliminar"
                                                        Tag="{x:Bind}"
                                                        ToolTipService.ToolTip="Eliminar cliente" />
                                                </StackPanel>
                                            </PivotItem>

                                            <!-- Contactos Relacionados -->
                                            <PivotItem Header="Contactos">
                                                <StackPanel Padding="8" Spacing="6">
                                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                                        <TextBlock
                                                            FontSize="14" FontWeight="SemiBold" Foreground="WhiteSmoke" Text="Contactos Relacionados" />
                                                        <Button
                                                            x:Name="NuevoContacto" VerticalAlignment="Center" Background="Black" BorderThickness="0"
                                                            Click="NuevoContacto_Click" ToolTipService.ToolTip="Agregar contacto" Foreground="DarkGray"
                                                            Tag="{x:Bind}">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Add" />
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>

                                                    <!--  Loading indicator for contactos  -->
                                                    <ProgressRing
                                                        Width="20" Height="20" HorizontalAlignment="Left"
                                                        IsActive="{x:Bind IsLoadingContactos, Mode=OneWay}"
                                                        Visibility="{x:Bind IsLoadingContactos, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />

                                                    <!--  Lista de contactos  -->
                                                    <ItemsRepeater ItemsSource="{x:Bind Contactos, Mode=OneWay}">
                                                        <ItemsRepeater.Layout>
                                                            <StackLayout Spacing="4" />
                                                        </ItemsRepeater.Layout>
                                                        <ItemsRepeater.ItemTemplate>
                                                            <DataTemplate xmlns:models="using:Advance_Control.Models" x:DataType="models:ContactoDto">
                                                                <Border
                                                                    Padding="12" Background="DarkGray"
                                                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                                    BorderThickness="1" CornerRadius="4">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <StackPanel Grid.Column="0" Spacing="2">
                                                                            <TextBlock
                                                                                FontSize="13" FontWeight="SemiBold" Foreground="Black"
                                                                                Text="{x:Bind NombreCompleto}" />
                                                                            <TextBlock
                                                                                FontSize="12" Foreground="Gray"
                                                                                Text="{x:Bind Cargo}" />
                                                                            <TextBlock
                                                                                FontSize="11" Foreground="DimGray"
                                                                                Text="{x:Bind Correo}"
                                                                                Visibility="{x:Bind Correo, Converter={StaticResource NullToVisibilityConverter}}" />
                                                                            <TextBlock
                                                                                FontSize="11" Foreground="DimGray"
                                                                                Text="{x:Bind Telefono}"
                                                                                Visibility="{x:Bind Telefono, Converter={StaticResource NullToVisibilityConverter}}" />
                                                                        </StackPanel>
                                                                        <TextBlock
                                                                            Grid.Column="1" Margin="0,0,8,0" VerticalAlignment="Center" FontSize="11"
                                                                            Foreground="Gray">
                                                                            <Run Text="ID: " />
                                                                            <Run Text="{x:Bind ContactoId}" />
                                                                        </TextBlock>
                                                                        <StackPanel
                                                                            Grid.Column="2" VerticalAlignment="Center" Orientation="Horizontal" Spacing="4">
                                                                            <Button
                                                                                AutomationProperties.Name="Eliminar contacto del cliente" Background="Transparent" BorderThickness="0" Click="DeleteContactoButton_Click"
                                                                                Tag="{x:Bind}"
                                                                                ToolTipService.ToolTip="Quitar contacto del cliente">
                                                                                <SymbolIcon Foreground="WhiteSmoke" Symbol="Delete" />
                                                                            </Button>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsRepeater.ItemTemplate>
                                                    </ItemsRepeater>

                                                    <!--  Mensaje cuando no hay contactos  -->
                                                    <TextBlock
                                                        FontSize="12" FontStyle="Italic" Foreground="Gray" Text="No hay contactos relacionados"
                                                        Visibility="{x:Bind ShowNoContactosMessage, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
                                                </StackPanel>
                                            </PivotItem>
                                        </Pivot>
                                    </Grid>
                                </StackPanel>

                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
