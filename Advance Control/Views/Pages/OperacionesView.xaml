<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Advance_Control.Views.OperacionesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Advance_Control.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Advance_Control.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BooleanToCornerRadiusConverter x:Key="BooleanToCornerRadiusConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToExpandTextConverter x:Key="BooleanToExpandTextConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:CurrencyConverter x:Key="CurrencyConverter" />
        <converters:RefaccionVisibilityConverter x:Key="RefaccionVisibilityConverter" />
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,24"
            Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock
                    FontSize="32"
                    FontWeight="Bold"
                    Text="Operaciones" />
            </StackPanel>
            <TextBlock
                FontSize="16"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="Gesti贸n de operaciones del sistema" />
        </StackPanel>

        <!--  Filtros  -->
        <Grid Grid.Row="1" x:Name="Fitros" >
            <StackPanel Margin="0,0,0,16" Spacing="12">
                <TextBlock
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="Filtros de b煤squeda" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  First row of filters  -->
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,8,8">
                        <TextBlock Margin="0,0,0,4" Text="ID Tipo" />
                        <ComboBox
                            x:Name="IdTipoComboBox"
                            HorizontalAlignment="Stretch"
                            SelectedIndex="{x:Bind ViewModel.IdTipoFilter, Mode=TwoWay}">
                            <ComboBoxItem Content="0 : Todos" />
                            <ComboBoxItem Content="1 : Correctivo" />
                            <ComboBoxItem Content="2 : Preventivo" />
                        </ComboBox>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,8,8">
                        <TextBlock Margin="0,0,0,4" Text="Cliente" />
                        <Button
                            x:Name="SelectClienteButton"
                            HorizontalAlignment="Stretch"
                            Click="SelectClienteButton_Click">
                            <TextBlock Text="{x:Bind ViewModel.SelectedClienteText, Mode=OneWay, FallbackValue='Seleccionar cliente...'}" />
                        </Button>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="0,0,0,8">
                        <TextBlock Margin="0,0,0,4" Text="Equipo" />
                        <Button
                            x:Name="SelectEquipoButton"
                            HorizontalAlignment="Stretch"
                            Click="SelectEquipoButton_Click">
                            <TextBlock Text="{x:Bind ViewModel.SelectedEquipoText, Mode=OneWay, FallbackValue='Seleccionar equipo...'}" />
                        </Button>
                    </StackPanel>

                    <!--  Second row of filters  -->
                    <TextBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,0,8,8"
                        Header="ID Atiende"
                        PlaceholderText="Buscar por ID atiende"
                        Text="{x:Bind ViewModel.IdAtiendeFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,0,8,8"
                        Header="Nota"
                        PlaceholderText="Buscar por nota"
                        Text="{x:Bind ViewModel.NotaFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            Click="SearchButton_Click"
                            Content="Buscar"
                            Style="{StaticResource AccentButtonStyle}" />
                        <Button Click="ClearButton_Click" Content="Limpiar" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>

        <!--  Lista de operaciones  -->
        <Grid Grid.Row="2">
            <!--  Loading indicator  -->
            <ProgressRing
                Width="50"
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />

            <!--  ItemsRepeater con ScrollViewer  -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Operaciones, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="0" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate xmlns:local="using:Advance_Control.Models" x:DataType="local:OperacionDto">
                            <Grid Margin="0,5,20,5">
                                <StackPanel Orientation="Vertical">
                                    <Grid
                                        x:Name="Head"
                                        Grid.Row="0"
                                        MinHeight="90"
                                        Padding="16"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,0,0,1"
                                        CornerRadius="{x:Bind Expand, Converter={StaticResource BooleanToCornerRadiusConverter}, ConverterParameter='8,8,0,0|8', Mode=OneWay}"
                                        Tag="{x:Bind}"
                                        Tapped="HeadGrid_Tapped">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Informaci贸n principal de la operaci贸n  -->
                                        <StackPanel Grid.Column="0" Spacing="6">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="SemiBold"
                                                Text="{x:Bind Identificador}" />
                                            <StackPanel Orientation="Horizontal" Spacing="20">
                                                <TextBlock FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="Cliente: " />
                                                    <Run FontWeight="SemiBold" Text="{x:Bind RazonSocial}" />
                                                </TextBlock>
                                                <TextBlock FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="Atiende: " />
                                                    <Run FontWeight="SemiBold" Text="{x:Bind Atiende}" />
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <!--  Bot贸n para expandir/colapsar  -->
                                        <Button
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="ToggleExpandButton_Click"
                                            Content="{x:Bind Expand, Converter={StaticResource BooleanToExpandTextConverter}, Mode=OneWay}"
                                            Tag="{x:Bind}" />
                                    </Grid>
                                    <Grid
                                        x:Name="Body"
                                        Grid.Row="1"
                                        Padding="8"
                                        Background="Black"
                                        CornerRadius="{x:Bind Expand, Converter={StaticResource BooleanToCornerRadiusConverter}, ConverterParameter='0,0,8,8|0', Mode=OneWay}"
                                        Visibility="{x:Bind Expand, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                                        <Pivot>
                                            <!--  Informaci贸n de la Operaci贸n  -->
                                            <PivotItem Header="Informaci贸n">
                                                <Grid Padding="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <StackPanel
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="ID Tipo:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind IdTipo}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Monto:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind Monto}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Raz贸n Social:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind RazonSocial}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Fecha Inicio:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind FechaInicio}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="2"
                                                        Grid.Column="0"
                                                        Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Identificador Equipo:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind Identificador}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="2"
                                                        Grid.Column="1"
                                                        Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Fecha Final:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind FechaFinal}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="3"
                                                        Grid.Column="0"
                                                        Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Atiende:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind Atiende}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="3"
                                                        Grid.Column="1"
                                                        Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Finalizado:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind Finalizado}" />
                                                    </StackPanel>

                                                    <!--  Indicadores de im谩genes  -->
                                                    <StackPanel
                                                        Grid.Row="4"
                                                        Grid.Column="0"
                                                        Grid.ColumnSpan="2"
                                                        Margin="0,8,0,0"
                                                        Orientation="Horizontal"
                                                        Spacing="8">
                                                        <Border
                                                            Padding="6,3"
                                                            Background="#1A6B3A"
                                                            CornerRadius="4"
                                                            Visibility="{x:Bind HasPrefactura, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                                                            <TextBlock
                                                                FontSize="11"
                                                                Foreground="#4EC48A"
                                                                Text=" Prefactura" />
                                                        </Border>
                                                        <Border
                                                            Padding="6,3"
                                                            Background="#1A3F6B"
                                                            CornerRadius="4"
                                                            Visibility="{x:Bind HasHojaServicio, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                                                            <TextBlock
                                                                FontSize="11"
                                                                Foreground="#4E9CC4"
                                                                Text=" Hoja Servicio" />
                                                        </Border>
                                                        <Border
                                                            Padding="6,3"
                                                            Background="#5C3A1A"
                                                            CornerRadius="4"
                                                            Visibility="{x:Bind HasOrdenCompra, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                                                            <TextBlock
                                                                FontSize="11"
                                                                Foreground="#C49A4E"
                                                                Text=" Orden Compra" />
                                                        </Border>
                                                    </StackPanel>
                                                </Grid>
                                            </PivotItem>

                                            <!--  Nota  -->
                                            <PivotItem Header="Nota">
                                                <StackPanel Padding="8">
                                                    <TextBlock
                                                        FontSize="13"
                                                        Foreground="WhiteSmoke"
                                                        Text="{x:Bind Nota}"
                                                        TextWrapping="Wrap"
                                                        Visibility="{x:Bind Nota, Converter={StaticResource NullToVisibilityConverter}}" />
                                                </StackPanel>
                                            </PivotItem>

                                            <!--  Acciones  -->
                                            <PivotItem Header="Acciones">
                                                <StackPanel Padding="8" Spacing="8">
                                                    <TextBlock
                                                        Margin="0,0,0,4"
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="Documentos" />
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <Button
                                                            Background="{ThemeResource SystemAccentColor}"
                                                            Click="GenerarCotizacionButton_Click"
                                                            Tag="{x:Bind}"
                                                            ToolTipService.ToolTip="Generar cotizaci贸n PDF">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Document" />
                                                                <TextBlock Text="Generar Cotizaci贸n" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Background="{ThemeResource SystemAccentColor}"
                                                            Click="GenerarReporteButton_Click"
                                                            Tag="{x:Bind}"
                                                            ToolTipService.ToolTip="Generar reporte PDF con im谩genes">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Pictures" />
                                                                <TextBlock Text="Generar Reporte" />
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>

                                                    <TextBlock
                                                        Margin="0,16,0,4"
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="Cargar Im谩genes" />
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <Button
                                                            Background="{ThemeResource SystemAccentColor}"
                                                            Click="UploadPrefacturaButton_Click"
                                                            Tag="{x:Bind}"
                                                            ToolTipService.ToolTip="Cargar imagen de prefactura">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Camera" />
                                                                <TextBlock Text="Prefactura" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Background="{ThemeResource SystemAccentColor}"
                                                            Click="UploadHojaServicioButton_Click"
                                                            Tag="{x:Bind}"
                                                            ToolTipService.ToolTip="Cargar imagen de hoja de servicio">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Camera" />
                                                                <TextBlock Text="Hoja Servicio" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Background="{ThemeResource SystemAccentColor}"
                                                            Click="UploadOrdenCompraButton_Click"
                                                            Tag="{x:Bind}"
                                                            ToolTipService.ToolTip="Cargar imagen de orden de compra">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Camera" />
                                                                <TextBlock Text="Orden Compra" />
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>

                                                    <TextBlock
                                                        Margin="0,16,0,4"
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="Eliminar" />
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <Button
                                                            AutomationProperties.Name="Eliminar operaci贸n"
                                                            Background="Red"
                                                            Click="DeleteOperacionButton_Click"
                                                            Tag="{x:Bind}"
                                                            ToolTipService.ToolTip="Eliminar operaci贸n">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Delete" />
                                                                <TextBlock Text="Eliminar Operaci贸n" />
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>
                                                </StackPanel>
                                            </PivotItem>

                                            <!--  Cargos  -->
                                            <PivotItem Header="Cargos">
                                                <Grid Padding="8">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <!--  Buttons for Add Cargo  -->
                                                    <StackPanel
                                                        Grid.Row="0"
                                                        Margin="0,0,0,8"
                                                        Orientation="Horizontal"
                                                        Spacing="8">
                                                        <Button
                                                            Click="AddCargoButton_Click"
                                                            Style="{StaticResource AccentButtonStyle}"
                                                            Tag="{x:Bind}">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Add" />
                                                                <TextBlock Text="Agregar Cargo" />
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>

                                                    <!--  Header Row for Cargos Table  -->
                                                    <Grid
                                                        Grid.Row="1"
                                                        Margin="0,0,0,2"
                                                        Padding="8,4"
                                                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="100" />
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="80" />
                                                            <ColumnDefinition Width="100" />
                                                            <ColumnDefinition Width="100" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="50" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            FontWeight="SemiBold"
                                                            Foreground="WhiteSmoke"
                                                            Text="Tipo" />
                                                        <TextBlock
                                                            Grid.Column="1"
                                                            VerticalAlignment="Center"
                                                            FontWeight="SemiBold"
                                                            Foreground="WhiteSmoke"
                                                            Text="Detalle" />
                                                        <TextBlock
                                                            Grid.Column="2"
                                                            VerticalAlignment="Center"
                                                            FontWeight="SemiBold"
                                                            Foreground="WhiteSmoke"
                                                            Text="Cantidad" />
                                                        <TextBlock
                                                            Grid.Column="3"
                                                            VerticalAlignment="Center"
                                                            FontWeight="SemiBold"
                                                            Foreground="WhiteSmoke"
                                                            Text="Unitario" />
                                                        <TextBlock
                                                            Grid.Column="4"
                                                            VerticalAlignment="Center"
                                                            FontWeight="SemiBold"
                                                            Foreground="WhiteSmoke"
                                                            Text="Monto" />
                                                        <TextBlock
                                                            Grid.Column="5"
                                                            VerticalAlignment="Center"
                                                            FontWeight="SemiBold"
                                                            Foreground="WhiteSmoke"
                                                            Text="Nota" />
                                                        <TextBlock
                                                            Grid.Column="6"
                                                            VerticalAlignment="Center"
                                                            FontWeight="SemiBold"
                                                            Foreground="WhiteSmoke"
                                                            Text="Proveedor" />
                                                        <TextBlock
                                                            Grid.Column="7"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            FontWeight="SemiBold"
                                                            Foreground="WhiteSmoke"
                                                            Text="Sel."
                                                            ToolTipService.ToolTip="Seleccionar" />
                                                    </Grid>

                                                    <!--  ItemsRepeater for Cargos  -->
                                                    <ScrollViewer
                                                        Grid.Row="2"
                                                        MaxHeight="400"
                                                        VerticalScrollBarVisibility="Auto">
                                                        <ItemsRepeater ItemsSource="{x:Bind Cargos, Mode=OneWay}">
                                                            <ItemsRepeater.Layout>
                                                                <StackLayout Spacing="2" />
                                                            </ItemsRepeater.Layout>
                                                            <ItemsRepeater.ItemTemplate>
                                                                <DataTemplate xmlns:models="using:Advance_Control.Models" x:DataType="models:CargoDto">
                                                                    <StackPanel
                                                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                                        BorderThickness="0,0,0,1"
                                                                        Tapped="CargoRow_Tapped">
                                                                        <!--  Main cargo row  -->
                                                                        <Grid Padding="8,6">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="100" />
                                                                                <ColumnDefinition Width="120" />
                                                                                <ColumnDefinition Width="80" />
                                                                                <ColumnDefinition Width="100" />
                                                                                <ColumnDefinition Width="100" />
                                                                                <ColumnDefinition Width="*" />
                                                                                <ColumnDefinition Width="120" />
                                                                                <ColumnDefinition Width="50" />
                                                                            </Grid.ColumnDefinitions>

                                                                            <!--  Tipo Cargo (ReadOnly)  -->
                                                                            <TextBlock
                                                                                Grid.Column="0"
                                                                                VerticalAlignment="Center"
                                                                                FontSize="12"
                                                                                Foreground="WhiteSmoke"
                                                                                Text="{x:Bind TipoCargo, Mode=OneWay}"
                                                                                TextTrimming="CharacterEllipsis" />

                                                                            <!--  Detalle (ReadOnly)  -->
                                                                            <TextBlock
                                                                                Grid.Column="1"
                                                                                VerticalAlignment="Center"
                                                                                FontSize="12"
                                                                                Foreground="WhiteSmoke"
                                                                                Text="{x:Bind DetalleRelacionado, Mode=OneWay}"
                                                                                TextTrimming="CharacterEllipsis" />

                                                                            <!--  Cantidad (Read-only display when not editing)  -->
                                                                            <TextBlock
                                                                                Grid.Column="2"
                                                                                VerticalAlignment="Center"
                                                                                FontSize="12"
                                                                                Foreground="WhiteSmoke"
                                                                                Text="{x:Bind Cantidad, Mode=OneWay}"
                                                                                Visibility="{x:Bind IsEditing, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}" />
                                                                            <!--  Cantidad (Editable when in edit mode)  -->
                                                                            <TextBox
                                                                                Grid.Column="2"
                                                                                MinHeight="28"
                                                                                Margin="0,0,4,0"
                                                                                Padding="4,2"
                                                                                VerticalAlignment="Center"
                                                                                FontSize="12"
                                                                                KeyDown="CargoField_KeyDown"
                                                                                Tag="{x:Bind}"
                                                                                Text="{x:Bind Cantidad, Mode=TwoWay}"
                                                                                Visibility="{x:Bind IsEditing, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                                                            <!--  Unitario (Read-only display when not editing)  -->
                                                                            <TextBlock
                                                                                Grid.Column="3"
                                                                                VerticalAlignment="Center"
                                                                                FontSize="12"
                                                                                Foreground="WhiteSmoke"
                                                                                Text="{x:Bind Unitario, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                                                                Visibility="{x:Bind IsEditing, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}" />
                                                                            <!--  Unitario (Editable when in edit mode)  -->
                                                                            <TextBox
                                                                                Grid.Column="3"
                                                                                MinHeight="28"
                                                                                Margin="0,0,4,0"
                                                                                Padding="4,2"
                                                                                VerticalAlignment="Center"
                                                                                FontSize="12"
                                                                                KeyDown="CargoField_KeyDown"
                                                                                Tag="{x:Bind}"
                                                                                Text="{x:Bind Unitario, Mode=TwoWay}"
                                                                                Visibility="{x:Bind IsEditing, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                                                            <!--  Monto (ReadOnly)  -->
                                                                            <TextBlock
                                                                                Grid.Column="4"
                                                                                VerticalAlignment="Center"
                                                                                FontSize="12"
                                                                                Foreground="WhiteSmoke"
                                                                                Text="{x:Bind Monto, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" />

                                                                            <!--  Nota (Read-only display when not editing)  -->
                                                                            <TextBlock
                                                                                Grid.Column="5"
                                                                                VerticalAlignment="Center"
                                                                                FontSize="12"
                                                                                Foreground="WhiteSmoke"
                                                                                Text="{x:Bind Nota, Mode=OneWay}"
                                                                                TextTrimming="CharacterEllipsis"
                                                                                Visibility="{x:Bind IsEditing, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}" />
                                                                            <!--  Nota (Editable when in edit mode)  -->
                                                                            <TextBox
                                                                                Grid.Column="5"
                                                                                MinHeight="28"
                                                                                Margin="0,0,4,0"
                                                                                Padding="4,2"
                                                                                VerticalAlignment="Center"
                                                                                FontSize="12"
                                                                                KeyDown="CargoField_KeyDown"
                                                                                Tag="{x:Bind}"
                                                                                Text="{x:Bind Nota, Mode=TwoWay}"
                                                                                Visibility="{x:Bind IsEditing, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                                                            <!--  Proveedor (ReadOnly)  -->
                                                                            <TextBlock
                                                                                Grid.Column="6"
                                                                                VerticalAlignment="Center"
                                                                                FontSize="12"
                                                                                Foreground="WhiteSmoke"
                                                                                Text="{x:Bind Proveedor, Mode=OneWay}"
                                                                                TextTrimming="CharacterEllipsis" />

                                                                            <!--  Checkbox para seleccionar  -->
                                                                            <CheckBox
                                                                                Grid.Column="7"
                                                                                MinWidth="0"
                                                                                Padding="0"
                                                                                HorizontalAlignment="Center"
                                                                                VerticalAlignment="Center"
                                                                                Checked="CargoCheckBox_Checked"
                                                                                IsChecked="{x:Bind IsSelected, Mode=TwoWay}"
                                                                                Tag="{x:Bind}" />
                                                                        </Grid>

                                                                        <!--  Images row - only visible if cargo has images and is expanded  -->
                                                                        <Grid
                                                                            Padding="8,4"
                                                                            Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                                                            Visibility="{x:Bind ShouldShowGallery, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                            <Grid.RowDefinitions>
                                                                                <RowDefinition Height="Auto" />
                                                                                <RowDefinition Height="Auto" />
                                                                            </Grid.RowDefinitions>

                                                                            <TextBlock
                                                                                Grid.Row="0"
                                                                                Margin="0,0,0,4"
                                                                                FontSize="11"
                                                                                FontWeight="SemiBold"
                                                                                Foreground="WhiteSmoke"
                                                                                Text="Im谩genes:" />

                                                                            <!--  ItemsRepeater for cargo images  -->
                                                                            <ItemsRepeater Grid.Row="1" ItemsSource="{x:Bind Images, Mode=OneWay}">
                                                                                <ItemsRepeater.Layout>
                                                                                    <StackLayout Orientation="Horizontal" Spacing="8" />
                                                                                </ItemsRepeater.Layout>
                                                                                <ItemsRepeater.ItemTemplate>
                                                                                    <DataTemplate x:DataType="models:CargoImageDto">
                                                                                        <Grid
                                                                                            Width="100"
                                                                                            Height="100"
                                                                                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                                                            CornerRadius="4">
                                                                                            <Image
                                                                                                HorizontalAlignment="Center"
                                                                                                VerticalAlignment="Center"
                                                                                                Source="{x:Bind Url, Mode=OneWay}"
                                                                                                Stretch="UniformToFill" />
                                                                                            <!--  Delete button overlay  -->
                                                                                            <Button
                                                                                                MinWidth="20"
                                                                                                MinHeight="20"
                                                                                                Margin="0,2,2,0"
                                                                                                Padding="4"
                                                                                                HorizontalAlignment="Right"
                                                                                                VerticalAlignment="Top"
                                                                                                Background="#CC000000"
                                                                                                Click="DeleteCargoImageButton_Click"
                                                                                                CornerRadius="10"
                                                                                                Tag="{x:Bind}"
                                                                                                ToolTipService.ToolTip="Eliminar imagen">
                                                                                                <SymbolIcon Foreground="White" Symbol="Cancel" />
                                                                                            </Button>
                                                                                        </Grid>
                                                                                    </DataTemplate>
                                                                                </ItemsRepeater.ItemTemplate>
                                                                            </ItemsRepeater>
                                                                        </Grid>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ItemsRepeater.ItemTemplate>
                                                        </ItemsRepeater>
                                                    </ScrollViewer>

                                                    <!--  Action Buttons for Selected Cargos  -->
                                                    <StackPanel
                                                        Grid.Row="3"
                                                        Margin="0,8,0,0"
                                                        Padding="8"
                                                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                                        CornerRadius="4"
                                                        Orientation="Horizontal"
                                                        Spacing="8">
                                                        <TextBlock
                                                            Margin="0,0,8,0"
                                                            VerticalAlignment="Center"
                                                            FontWeight="SemiBold"
                                                            Foreground="WhiteSmoke"
                                                            Text="Acciones:" />
                                                        <Button
                                                            Click="UploadSelectedCargoImageButton_Click"
                                                            Tag="{x:Bind}"
                                                            ToolTipService.ToolTip="Cargar imagen al cargo seleccionado">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Camera" />
                                                                <TextBlock Text="Cargar Imagen" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Click="EditSelectedCargoButton_Click"
                                                            Tag="{x:Bind}"
                                                            ToolTipService.ToolTip="Editar cargo seleccionado">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Edit" />
                                                                <TextBlock Text="Editar" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Click="DeleteSelectedCargosButton_Click"
                                                            Tag="{x:Bind}"
                                                            ToolTipService.ToolTip="Eliminar cargos seleccionados">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Delete" />
                                                                <TextBlock Text="Eliminar" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Click="ViewSelectedRefaccionButton_Click"
                                                            Tag="{x:Bind}"
                                                            ToolTipService.ToolTip="Ver detalles de refacci贸n seleccionada">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="View" />
                                                                <TextBlock Text="Ver Refacci贸n" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Click="ExpandSelectedGalleryButton_Click"
                                                            Tag="{x:Bind}"
                                                            ToolTipService.ToolTip="Expandir galer铆a de im谩genes del cargo seleccionado">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Pictures" />
                                                                <TextBlock Text="Ver Im谩genes" />
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>

                                                    <!--  Total Sum NumberBox  -->
                                                    <StackPanel
                                                        Grid.Row="4"
                                                        Margin="0,8,0,0"
                                                        HorizontalAlignment="Right"
                                                        Orientation="Horizontal"
                                                        Spacing="8">
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontWeight="SemiBold"
                                                            Foreground="WhiteSmoke"
                                                            Text="Total:" />
                                                        <NumberBox
                                                            Width="150"
                                                            IsEnabled="False"
                                                            NumberFormatter="{x:Bind CurrencyFormatter}"
                                                            SpinButtonPlacementMode="Hidden"
                                                            Value="{x:Bind TotalMonto, Mode=OneWay}" />
                                                    </StackPanel>
                                                </Grid>
                                            </PivotItem>
                                        </Pivot>
                                    </Grid>
                                </StackPanel>

                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
