<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Advance_Control.UserControls.RefaccionesViewerUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="400"
    MinHeight="300"
    mc:Ignorable="d">

    <Grid>
        <!--  Loading indicator  -->
        <ProgressRing
            x:Name="LoadingRing"
            Width="50"
            Height="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsActive="False"
            Visibility="Collapsed" />

        <!--  Content  -->
        <ScrollViewer
            x:Name="ContentScroller"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16" Padding="4">
                <!--  ID Section  -->
                <Border
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Border
                            Grid.Column="0"
                            Margin="0,0,12,0"
                            Padding="12,6"
                            VerticalAlignment="Center"
                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                            CornerRadius="4">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Text="{x:Bind IdRefaccion, Mode=OneWay}" />
                        </Border>
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            Text="ID de Refacción" />
                    </Grid>
                </Border>

                <!--  Marca  -->
                <StackPanel Spacing="4">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Marca" />
                    <Border
                        Padding="12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <TextBlock
                            FontSize="14"
                            Text="{x:Bind Marca, Mode=OneWay}"
                            TextWrapping="Wrap" />
                    </Border>
                </StackPanel>

                <!--  Serie  -->
                <StackPanel Spacing="4">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Serie" />
                    <Border
                        Padding="12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <TextBlock
                            FontSize="14"
                            Text="{x:Bind Serie, Mode=OneWay}"
                            TextWrapping="Wrap" />
                    </Border>
                </StackPanel>

                <!--  Costo  -->
                <StackPanel Spacing="4">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Costo" />
                    <Border
                        Padding="12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <TextBlock FontSize="14">
                            <Run Text="$" />
                            <Run Text="{x:Bind Costo, Mode=OneWay}" />
                        </TextBlock>
                    </Border>
                </StackPanel>

                <!--  Descripcion  -->
                <StackPanel Spacing="4">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Descripción" />
                    <Border
                        Padding="12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <TextBlock
                            FontSize="14"
                            Text="{x:Bind Descripcion, Mode=OneWay}"
                            TextWrapping="Wrap" />
                    </Border>
                </StackPanel>

                <!--  Estatus  -->
                <StackPanel Spacing="4">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Estatus" />
                    <Border
                        Padding="12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border
                                Padding="8,4"
                                VerticalAlignment="Center"
                                Background="{x:Bind EstatusBrush, Mode=OneWay}"
                                CornerRadius="4">
                                <TextBlock
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    Text="{x:Bind EstatusText, Mode=OneWay}" />
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!--  Error message  -->
        <StackPanel
            x:Name="ErrorPanel"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="12"
            Visibility="Collapsed">
            <SymbolIcon
                HorizontalAlignment="Center"
                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                Symbol="Important" />
            <TextBlock
                x:Name="ErrorTextBlock"
                HorizontalAlignment="Center"
                FontSize="14"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="Error al cargar la refacción"
                TextAlignment="Center"
                TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>
