<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Advance_Control.Views.Equipos.SeleccionarUbicacionUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Advance_Control.Models"
    MinWidth="500"
    MinHeight="400"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,12"
            FontSize="18"
            FontWeight="SemiBold"
            Text="Seleccionar UbicaciÃ³n" />

        <!--  Loading indicator  -->
        <ProgressRing
            Grid.Row="1"
            Width="40"
            Height="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsActive="{x:Bind IsLoading, Mode=OneWay}"
            Visibility="{x:Bind IsLoading, Mode=OneWay}" />

        <!--  Location List  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ListView
                x:Name="UbicacionesList"
                ItemsSource="{x:Bind Ubicaciones, Mode=OneWay}"
                SelectedItem="{x:Bind SelectedUbicacion, Mode=TwoWay}"
                SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:UbicacionDto">
                        <Grid Padding="8">
                            <StackPanel>
                                <TextBlock FontWeight="SemiBold" Text="{x:Bind Nombre}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="{x:Bind Descripcion}" />
                                <TextBlock FontSize="11" Foreground="Gray">
                                    <Run Text="Lat: " />
                                    <Run Text="{x:Bind Latitud}" />
                                    <Run Text=", Lng: " />
                                    <Run Text="{x:Bind Longitud}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</UserControl>
