<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Advance_Control.Views.Equipos.AgregarCargoUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    MinWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ID Operaci贸n (readonly) -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="ID Operaci贸n:" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBlock x:Name="IdOperacionTextBlock" FontSize="14" />
        </StackPanel>

        <!-- ID Tipo Cargo -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="Tipo de Cargo:" FontWeight="SemiBold" Margin="0,0,0,4" />
            <ComboBox
                x:Name="TipoCargoComboBox"
                HorizontalAlignment="Stretch"
                SelectionChanged="TipoCargoComboBox_SelectionChanged">
                <ComboBoxItem Content="Refaccion" Tag="1" />
                <ComboBoxItem Content="Servicio" Tag="2" />
            </ComboBox>
        </StackPanel>

        <!-- ID Relaci贸n Cargo -->
        <StackPanel Grid.Row="2" Margin="0,0,0,12">
            <TextBlock Text="ID Relaci贸n Cargo:" FontWeight="SemiBold" Margin="0,0,0,4" />
            <Button
                x:Name="IdRelacionCargoButton"
                HorizontalAlignment="Stretch"
                Click="IdRelacionCargoButton_Click"
                IsEnabled="False">
                <TextBlock x:Name="IdRelacionCargoButtonText" Text="Seleccione primero el tipo de cargo..." />
            </Button>
        </StackPanel>

        <!-- Monto -->
        <StackPanel Grid.Row="3" Margin="0,0,0,12">
            <TextBlock Text="Monto:" FontWeight="SemiBold" Margin="0,0,0,4" />
            <NumberBox
                x:Name="MontoNumberBox"
                PlaceholderText="Ingrese monto (mayor a 0)"
                SpinButtonPlacementMode="Compact"
                Minimum="0.01"
                Maximum="999999.99"
                SmallChange="0.01"
                LargeChange="1"
                AutomationProperties.Name="Monto del cargo" />
        </StackPanel>

        <!-- Nota -->
        <StackPanel Grid.Row="4" Margin="0,0,0,0">
            <TextBlock Text="Nota (opcional):" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox
                x:Name="NotaTextBox"
                PlaceholderText="Ingrese una nota (opcional)..."
                AcceptsReturn="True"
                TextWrapping="Wrap"
                MinHeight="80"
                MaxHeight="120" />
        </StackPanel>
    </Grid>
</UserControl>
