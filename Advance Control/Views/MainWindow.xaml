<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Advance_Control.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Advance_Control" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Title="Advance Control" mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition x:Name="NotificacionesColumn" Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid x:Name="TopBar" Grid.Row="0">
                <Grid Margin="10,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <!--  Boton login/logout  -->
                        <Button
                            x:Name="LogIn" Width="50" Height="32" VerticalAlignment="Center"
                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                            Click="LoginButton_Click" CornerRadius="16">
                            <TextBlock
                                HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding UserInitials}" />
                        </Button>
                    </Grid>

                    <Grid Grid.Column="1"> 
                        <TextBlock
                            VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold"
                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                            Text="{Binding UserType}" HorizontalAlignment="Center"/>
                    </Grid>

                    <Grid Grid.Column="2">
                        <Button 
                            x:Name="ToggleNotificacionesButton"
                            Click="ToggleNotificaciones_Click" 
                            HorizontalAlignment="Right"
                            Width="32"
                            Height="32"
                            Padding="0"
                            CornerRadius="16"
                            Background="{Binding HasUnseenNotifications, Converter={StaticResource NotificationColorConverter}}">
                            <TextBlock 
                                Text="{Binding IsNotificacionesVisible, Converter={StaticResource BoolToArrowConverter}}"
                                FontSize="18"
                                FontWeight="Bold"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <NavigationView
                    x:Name="nvSample" IsBackButtonVisible="Auto"
                    IsBackEnabled="{Binding IsBackEnabled, Mode=OneWay}">
                    <NavigationView.MenuItems>
                        <NavigationViewItem
                            Content="Operaciones" Icon="Calculator" Tag="Operaciones" />
                        <NavigationViewItem
                            Content="Asesoría" Icon="ContactInfo" Tag="Asesoria" />
                        <NavigationViewItem
                            Content="Mantenimiento" Icon="Repair" Tag="Mantenimiento" />
                        <NavigationViewItem
                            Content="Clientes" Icon="People" Tag="Clientes" />
                        <NavigationViewItem
                            Content="Equipos" Icon="AllApps" Tag="Equipos" />
                        <NavigationViewItem
                            Content="Refacciones" Icon="Setting" Tag="Refacciones" />
                        <NavigationViewItem
                            Content="Proveedores" Icon="Contact" Tag="Proveedores" />
                    </NavigationView.MenuItems>
                    <Frame x:Name="contentFrame" />
                </NavigationView>
            </Grid>

        </Grid>
        <Grid
            x:Name="Notificaciones" Grid.Row="0" Grid.Column="1" Padding="10"
            Visibility="{Binding IsNotificacionesVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <TextBlock
                Grid.Row="0" Margin="0,0,0,10" FontFamily="Consolas" FontSize="16"
                FontWeight="Bold" Text="NOTIFICACIONES" />

            <!--  Notification List  -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Notificaciones}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,0,8" Padding="10"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1" CornerRadius="4">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <!--  Título  -->
                                        <TextBlock
                                            FontSize="14" FontWeight="Bold"
                                            Text="{Binding Titulo}"
                                            TextWrapping="Wrap" />

                                        <!--  Nota  -->
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Text="{Binding Nota}"
                                            TextWrapping="Wrap"
                                            Visibility="{Binding Nota, Converter={StaticResource NullToVisibilityConverter}}" />

                                        <!--  Fecha de Inicio  -->
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                            Visibility="{Binding FechaHoraInicio, Converter={StaticResource NullToVisibilityConverter}}">
                                            <Run Text="Inicio: " />
                                            <Run Text="{Binding FechaHoraInicio, Converter={StaticResource DateTimeFormatConverter}}" />
                                        </TextBlock>

                                        <!--  Fecha Final  -->
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                            Visibility="{Binding FechaHoraFinal, Converter={StaticResource NullToVisibilityConverter}}">
                                            <Run Text="Final: " />
                                            <Run Text="{Binding FechaHoraFinal, Converter={StaticResource DateTimeFormatConverter}}" />
                                        </TextBlock>

                                        <!--  Fecha de Creación  -->
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="{ThemeResource TextFillColorDisabledBrush}"
                                            Text="{Binding FechaCreacion, Converter={StaticResource DateTimeFormatConverter}}" />
                                    </StackPanel>

                                    <!--  Delete Button  -->
                                    <Button
                                        Grid.Column="1" Padding="8" VerticalAlignment="Top" Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding DataContext.EliminarNotificacionCommand, ElementName=RootGrid}"
                                        CommandParameter="{Binding Id}"
                                        ToolTipService.ToolTip="Eliminar notificación">
                                        <SymbolIcon Symbol="Delete" />
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        <Grid
            Grid.Row="1" Grid.ColumnSpan="2" Background="Green">
            <TextBlock
                FontFamily="Consolas" FontSize="8" Text="EN LINEA" />
        </Grid>
    </Grid>


</Window>
