<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Advance_Control.Views.Dialogs.NuevoClienteUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="500"
    MinHeight="400"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
            <StackPanel Spacing="12">
                <!-- RFC -->
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,4"
                        FontWeight="SemiBold"
                        Text="RFC:" />
                    <TextBox
                        x:Name="RfcTextBox"
                        MaxLength="13"
                        PlaceholderText="RFC del cliente (requerido)" />
                </StackPanel>

                <!-- Razón Social -->
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,4"
                        FontWeight="SemiBold"
                        Text="Razón Social:" />
                    <TextBox
                        x:Name="RazonSocialTextBox"
                        PlaceholderText="Razón social (requerido)" />
                </StackPanel>

                <!-- Nombre Comercial -->
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,4"
                        FontWeight="SemiBold"
                        Text="Nombre Comercial:" />
                    <TextBox
                        x:Name="NombreComercialTextBox"
                        PlaceholderText="Nombre comercial (requerido)" />
                </StackPanel>

                <!-- Régimen Fiscal -->
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,4"
                        Text="Régimen Fiscal:" />
                    <TextBox
                        x:Name="RegimenFiscalTextBox"
                        PlaceholderText="Régimen fiscal (opcional)" />
                </StackPanel>

                <!-- Uso CFDI -->
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,4"
                        Text="Uso CFDI:" />
                    <TextBox
                        x:Name="UsoCfdiTextBox"
                        PlaceholderText="Uso CFDI (opcional)" />
                </StackPanel>

                <!-- Días de Crédito -->
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,4"
                        Text="Días de Crédito:" />
                    <NumberBox
                        x:Name="DiasCreditoNumberBox"
                        Minimum="0"
                        PlaceholderText="Días de crédito"
                        SpinButtonPlacementMode="Inline" />
                </StackPanel>

                <!-- Límite de Crédito -->
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,4"
                        Text="Límite de Crédito:" />
                    <NumberBox
                        x:Name="LimiteCreditoNumberBox"
                        Minimum="0"
                        PlaceholderText="Límite de crédito"
                        SpinButtonPlacementMode="Inline" />
                </StackPanel>

                <!-- Prioridad -->
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,4"
                        Text="Prioridad:" />
                    <NumberBox
                        x:Name="PrioridadNumberBox"
                        Maximum="10"
                        Minimum="0"
                        PlaceholderText="Prioridad (0-10)"
                        SpinButtonPlacementMode="Inline" />
                </StackPanel>

                <!-- Notas -->
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,4"
                        Text="Notas:" />
                    <TextBox
                        x:Name="NotasTextBox"
                        MinHeight="80"
                        MaxHeight="150"
                        AcceptsReturn="True"
                        PlaceholderText="Notas adicionales (opcional)"
                        TextWrapping="Wrap" />
                </StackPanel>

                <!-- Estatus -->
                <CheckBox
                    x:Name="EstatusCheckBox"
                    Content="Activo"
                    IsChecked="True" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
