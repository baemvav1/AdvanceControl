<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Advance_Control.Views.OperacionesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Advance_Control.Converters"
    xmlns:local="using:Advance_Control.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BooleanToCornerRadiusConverter x:Key="BooleanToCornerRadiusConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToExpandTextConverter x:Key="BooleanToExpandTextConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:CurrencyConverter x:Key="CurrencyConverter" />
        <converters:RefaccionVisibilityConverter x:Key="RefaccionVisibilityConverter" />
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0" Margin="0,0,0,24" Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock
                    FontSize="32" FontWeight="Bold" Text="Operaciones" />
            </StackPanel>
            <TextBlock
                FontSize="16"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="Gestión de operaciones del sistema" />
        </StackPanel>

        <!--  Filtros  -->
        <StackPanel
            Grid.Row="1" Margin="0,0,0,16" Spacing="12">
            <TextBlock
                FontSize="16" FontWeight="SemiBold" Text="Filtros de búsqueda" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- First row of filters -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,8">
                    <TextBlock Text="ID Tipo" Margin="0,0,0,4" />
                    <ComboBox
                        x:Name="IdTipoComboBox"
                        HorizontalAlignment="Stretch"
                        SelectedIndex="{x:Bind ViewModel.IdTipoFilter, Mode=TwoWay}">
                        <ComboBoxItem Content="0 : Todos" />
                        <ComboBoxItem Content="1 : Correctivo" />
                        <ComboBoxItem Content="2 : Preventivo" />
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,8,8">
                    <TextBlock Text="Cliente" Margin="0,0,0,4" />
                    <Button
                        x:Name="SelectClienteButton"
                        HorizontalAlignment="Stretch"
                        Click="SelectClienteButton_Click">
                        <TextBlock Text="{x:Bind ViewModel.SelectedClienteText, Mode=OneWay, FallbackValue='Seleccionar cliente...'}" />
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,8">
                    <TextBlock Text="Equipo" Margin="0,0,0,4" />
                    <Button
                        x:Name="SelectEquipoButton"
                        HorizontalAlignment="Stretch"
                        Click="SelectEquipoButton_Click">
                        <TextBlock Text="{x:Bind ViewModel.SelectedEquipoText, Mode=OneWay, FallbackValue='Seleccionar equipo...'}" />
                    </Button>
                </StackPanel>

                <!-- Second row of filters -->
                <TextBox
                    Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" Header="ID Atiende"
                    PlaceholderText="Buscar por ID atiende"
                    Text="{x:Bind ViewModel.IdAtiendeFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="1" Grid.Column="1" Margin="0,0,8,8" Header="Nota"
                    PlaceholderText="Buscar por nota"
                    Text="{x:Bind ViewModel.NotaFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel
                    Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" Orientation="Horizontal" Spacing="8">
                    <Button
                        Click="SearchButton_Click" Content="Buscar"
                        Style="{StaticResource AccentButtonStyle}" />
                    <Button Click="ClearButton_Click" Content="Limpiar" />
                </StackPanel>
            </Grid>
        </StackPanel>

        <!--  Lista de operaciones  -->
        <Grid Grid.Row="2">
            <!--  Loading indicator  -->
            <ProgressRing
                Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />

            <!--  ItemsRepeater con ScrollViewer  -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Operaciones, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="0" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate xmlns:local="using:Advance_Control.Models" x:DataType="local:OperacionDto">
                            <Grid Margin="0,5,20,5">
                                <StackPanel Orientation="Vertical">
                                    <Grid
                                        x:Name="Head" Grid.Row="0" MinHeight="90" Padding="16"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,0,0,1"
                                        CornerRadius="{x:Bind Expand, Converter={StaticResource BooleanToCornerRadiusConverter}, ConverterParameter='8,8,0,0|8', Mode=OneWay}"
                                        Tag="{x:Bind}"
                                        Tapped="HeadGrid_Tapped">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Información principal de la operación  -->
                                        <StackPanel Grid.Column="0" Spacing="6">
                                            <TextBlock
                                                FontSize="16" FontWeight="SemiBold"
                                                Text="{x:Bind Identificador}" />
                                            <StackPanel Orientation="Horizontal" Spacing="20">
                                                <TextBlock FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="Cliente: " />
                                                    <Run FontWeight="SemiBold" Text="{x:Bind RazonSocial}" />
                                                </TextBlock>
                                                <TextBlock FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="Atiende: " />
                                                    <Run FontWeight="SemiBold" Text="{x:Bind Atiende}" />
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <!--  Botón para expandir/colapsar  -->
                                        <Button
                                            Grid.Column="1" VerticalAlignment="Center" Background="Transparent" BorderThickness="0"
                                            Click="ToggleExpandButton_Click"
                                            Content="{x:Bind Expand, Converter={StaticResource BooleanToExpandTextConverter}, Mode=OneWay}"
                                            Tag="{x:Bind}" />
                                    </Grid>
                                    <Grid
                                        x:Name="Body" Grid.Row="1" Padding="8" Background="Black"
                                        CornerRadius="{x:Bind Expand, Converter={StaticResource BooleanToCornerRadiusConverter}, ConverterParameter='0,0,8,8|0', Mode=OneWay}"
                                        Visibility="{x:Bind Expand, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                                        <Pivot>
                                            <!-- Información de la Operación -->
                                            <PivotItem Header="Información">
                                                <Grid Padding="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <StackPanel
                                                        Grid.Row="0" Grid.Column="0" Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="ID Tipo:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind IdTipo}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="0" Grid.Column="1" Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Monto:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind Monto}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="1" Grid.Column="0" Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Razón Social:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind RazonSocial}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="1" Grid.Column="1" Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Fecha Inicio:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind FechaInicio}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="2" Grid.Column="0" Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Identificador Equipo:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind Identificador}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="2" Grid.Column="1" Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Fecha Final:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind FechaFinal}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="3" Grid.Column="0" Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Atiende:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind Atiende}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="3" Grid.Column="1" Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Finalizado:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind Finalizado}" />
                                                    </StackPanel>
                                                </Grid>
                                            </PivotItem>

                                            <!-- Nota -->
                                            <PivotItem Header="Nota">
                                                <StackPanel Padding="8">
                                                    <TextBlock
                                                        FontSize="13" Foreground="WhiteSmoke"
                                                        Text="{x:Bind Nota}"
                                                        TextWrapping="Wrap"
                                                        Visibility="{x:Bind Nota, Converter={StaticResource NullToVisibilityConverter}}" />
                                                </StackPanel>
                                            </PivotItem>

                                            <!-- Acciones -->
                                            <PivotItem Header="Acciones">
                                                <StackPanel Padding="8" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                                                    <Button
                                                        AutomationProperties.Name="Eliminar operación"
                                                        Click="DeleteOperacionButton_Click"
                                                        Tag="{x:Bind}"
                                                        ToolTipService.ToolTip="Eliminar operación">
                                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                                            <SymbolIcon Symbol="Delete" />
                                                            <TextBlock Text="Eliminar" />
                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </PivotItem>

                                            <!-- Cargos -->
                                            <PivotItem Header="Cargos">
                                                <Grid Padding="8">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <!-- Buttons for Add/Delete -->
                                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                                                        <Button
                                                            Click="AddCargoButton_Click"
                                                            Tag="{x:Bind}"
                                                            Style="{StaticResource AccentButtonStyle}">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Add" />
                                                                <TextBlock Text="Agregar Cargo" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Click="GenerarCotizacionButton_Click"
                                                            Tag="{x:Bind}"
                                                            Background="{ThemeResource SystemAccentColorLight1}">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Document" />
                                                                <TextBlock Text="Generar Cotización" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Click="GenerarReporteButton_Click"
                                                            Tag="{x:Bind}"
                                                            Background="{ThemeResource SystemAccentColorLight2}">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Pictures" />
                                                                <TextBlock Text="Generar Reporte" />
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>

                                                    <!-- Header Row for Cargos Table -->
                                                    <Grid Grid.Row="1" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" Padding="8,4" Margin="0,0,0,2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="100" />
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="80" />
                                                            <ColumnDefinition Width="100" />
                                                            <ColumnDefinition Width="100" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="80" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="Tipo" FontWeight="SemiBold" Foreground="WhiteSmoke" VerticalAlignment="Center" />
                                                        <TextBlock Grid.Column="1" Text="Detalle" FontWeight="SemiBold" Foreground="WhiteSmoke" VerticalAlignment="Center" />
                                                        <TextBlock Grid.Column="2" Text="Cantidad" FontWeight="SemiBold" Foreground="WhiteSmoke" VerticalAlignment="Center" />
                                                        <TextBlock Grid.Column="3" Text="Unitario" FontWeight="SemiBold" Foreground="WhiteSmoke" VerticalAlignment="Center" />
                                                        <TextBlock Grid.Column="4" Text="Monto" FontWeight="SemiBold" Foreground="WhiteSmoke" VerticalAlignment="Center" />
                                                        <TextBlock Grid.Column="5" Text="Nota" FontWeight="SemiBold" Foreground="WhiteSmoke" VerticalAlignment="Center" />
                                                        <TextBlock Grid.Column="6" Text="Proveedor" FontWeight="SemiBold" Foreground="WhiteSmoke" VerticalAlignment="Center" />
                                                        <TextBlock Grid.Column="7" Text="Acciones" FontWeight="SemiBold" Foreground="WhiteSmoke" VerticalAlignment="Center" />
                                                    </Grid>
                                                    
                                                    <!-- ItemsRepeater for Cargos -->
                                                    <ScrollViewer Grid.Row="2" MaxHeight="400" VerticalScrollBarVisibility="Auto">
                                                        <ItemsRepeater ItemsSource="{x:Bind Cargos, Mode=OneWay}">
                                                            <ItemsRepeater.Layout>
                                                                <StackLayout Spacing="2" />
                                                            </ItemsRepeater.Layout>
                                                            <ItemsRepeater.ItemTemplate>
                                                                <DataTemplate xmlns:models="using:Advance_Control.Models" x:DataType="models:CargoDto">
                                                                    <StackPanel Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,0,0,1" Tapped="CargoRow_Tapped">
                                                                        <!-- Main cargo row -->
                                                                        <Grid Padding="8,6">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="100" />
                                                                                <ColumnDefinition Width="120" />
                                                                                <ColumnDefinition Width="80" />
                                                                                <ColumnDefinition Width="100" />
                                                                                <ColumnDefinition Width="100" />
                                                                                <ColumnDefinition Width="*" />
                                                                                <ColumnDefinition Width="120" />
                                                                                <ColumnDefinition Width="110" />
                                                                            </Grid.ColumnDefinitions>
                                                                        
                                                                            <!-- Tipo Cargo (ReadOnly) -->
                                                                            <TextBlock Grid.Column="0" Text="{x:Bind TipoCargo, Mode=OneWay}" VerticalAlignment="Center" Foreground="WhiteSmoke" FontSize="12" TextTrimming="CharacterEllipsis" />
                                                                        
                                                                            <!-- Detalle (ReadOnly) -->
                                                                            <TextBlock Grid.Column="1" Text="{x:Bind DetalleRelacionado, Mode=OneWay}" VerticalAlignment="Center" Foreground="WhiteSmoke" FontSize="12" TextTrimming="CharacterEllipsis" />
                                                                        
                                                                            <!-- Cantidad (Read-only display when not editing) -->
                                                                            <TextBlock Grid.Column="2" 
                                                                                       Text="{x:Bind Cantidad, Mode=OneWay}" 
                                                                                       VerticalAlignment="Center" 
                                                                                       Foreground="WhiteSmoke" 
                                                                                       FontSize="12"
                                                                                       Visibility="{x:Bind IsEditing, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}" />
                                                                            <!-- Cantidad (Editable when in edit mode) -->
                                                                            <TextBox Grid.Column="2" 
                                                                                     Text="{x:Bind Cantidad, Mode=TwoWay}" 
                                                                                     VerticalAlignment="Center" 
                                                                                     Margin="0,0,4,0"
                                                                                     MinHeight="28"
                                                                                     Padding="4,2"
                                                                                     FontSize="12"
                                                                                     KeyDown="CargoField_KeyDown"
                                                                                     Tag="{x:Bind}"
                                                                                     Visibility="{x:Bind IsEditing, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                                        
                                                                            <!-- Unitario (Read-only display when not editing) -->
                                                                            <TextBlock Grid.Column="3" 
                                                                                       Text="{x:Bind Unitario, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" 
                                                                                       VerticalAlignment="Center" 
                                                                                       Foreground="WhiteSmoke" 
                                                                                       FontSize="12"
                                                                                       Visibility="{x:Bind IsEditing, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}" />
                                                                            <!-- Unitario (Editable when in edit mode) -->
                                                                            <TextBox Grid.Column="3" 
                                                                                     Text="{x:Bind Unitario, Mode=TwoWay}" 
                                                                                     VerticalAlignment="Center" 
                                                                                     Margin="0,0,4,0"
                                                                                     MinHeight="28"
                                                                                     Padding="4,2"
                                                                                     FontSize="12"
                                                                                     KeyDown="CargoField_KeyDown"
                                                                                     Tag="{x:Bind}"
                                                                                     Visibility="{x:Bind IsEditing, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                                        
                                                                            <!-- Monto (ReadOnly) -->
                                                                            <TextBlock Grid.Column="4" Text="{x:Bind Monto, Mode=OneWay, Converter={StaticResource CurrencyConverter}}" VerticalAlignment="Center" Foreground="WhiteSmoke" FontSize="12" />
                                                                        
                                                                            <!-- Nota (Read-only display when not editing) -->
                                                                            <TextBlock Grid.Column="5" 
                                                                                       Text="{x:Bind Nota, Mode=OneWay}" 
                                                                                       VerticalAlignment="Center" 
                                                                                       Foreground="WhiteSmoke" 
                                                                                       FontSize="12"
                                                                                       TextTrimming="CharacterEllipsis"
                                                                                       Visibility="{x:Bind IsEditing, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}" />
                                                                            <!-- Nota (Editable when in edit mode) -->
                                                                            <TextBox Grid.Column="5" 
                                                                                     Text="{x:Bind Nota, Mode=TwoWay}" 
                                                                                     VerticalAlignment="Center" 
                                                                                     Margin="0,0,4,0"
                                                                                     MinHeight="28"
                                                                                     Padding="4,2"
                                                                                     FontSize="12"
                                                                                     KeyDown="CargoField_KeyDown"
                                                                                     Tag="{x:Bind}"
                                                                                     Visibility="{x:Bind IsEditing, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                                        
                                                                            <!-- Proveedor (ReadOnly) -->
                                                                            <TextBlock Grid.Column="6" Text="{x:Bind Proveedor, Mode=OneWay}" VerticalAlignment="Center" Foreground="WhiteSmoke" FontSize="12" TextTrimming="CharacterEllipsis" />
                                                                        
                                                                            <!-- Actions -->
                                                                            <StackPanel Grid.Column="7" Orientation="Horizontal" Spacing="2" VerticalAlignment="Center">
                                                                                <Button
                                                                                    Click="UploadCargoImageButton_Click"
                                                                                    Tag="{x:Bind}"
                                                                                    Background="Transparent"
                                                                                    Padding="4"
                                                                                    MinHeight="24"
                                                                                    MinWidth="24"
                                                                                    ToolTipService.ToolTip="Cargar imagen">
                                                                                    <SymbolIcon Symbol="Camera" />
                                                                                </Button>
                                                                                <Button
                                                                                    Click="EditCargoButton_Click"
                                                                                    Tag="{x:Bind}"
                                                                                    Background="Transparent"
                                                                                    Padding="4"
                                                                                    MinHeight="24"
                                                                                    MinWidth="24"
                                                                                    ToolTipService.ToolTip="Editar cargo">
                                                                                    <SymbolIcon Symbol="Edit" />
                                                                                </Button>
                                                                                <Button
                                                                                    Click="DeleteCargoButton_Click"
                                                                                    Tag="{x:Bind}"
                                                                                    Background="Transparent"
                                                                                    Padding="4"
                                                                                    MinHeight="24"
                                                                                    MinWidth="24"
                                                                                    ToolTipService.ToolTip="Eliminar cargo">
                                                                                    <SymbolIcon Symbol="Delete" />
                                                                                </Button>
                                                                                <Button
                                                                                    Click="ViewRefaccionFromCargoButton_Click"
                                                                                    Tag="{x:Bind}"
                                                                                    Background="Transparent"
                                                                                    Padding="4"
                                                                                    MinHeight="24"
                                                                                    MinWidth="24"
                                                                                    ToolTipService.ToolTip="Ver detalles de refacción"
                                                                                    Visibility="{x:Bind TipoCargo, Converter={StaticResource RefaccionVisibilityConverter}}">
                                                                                    <SymbolIcon Symbol="View" />
                                                                                </Button>
                                                                            </StackPanel>
                                                                        </Grid>
                                                                        
                                                                        <!-- Images row - only visible if cargo has images and is expanded -->
                                                                        <Grid Padding="8,4" 
                                                                              Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                                                              Visibility="{x:Bind ShouldShowGallery, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                            <Grid.RowDefinitions>
                                                                                <RowDefinition Height="Auto" />
                                                                                <RowDefinition Height="Auto" />
                                                                            </Grid.RowDefinitions>
                                                                            
                                                                            <TextBlock Grid.Row="0" 
                                                                                       Text="Imágenes:" 
                                                                                       FontSize="11" 
                                                                                       FontWeight="SemiBold" 
                                                                                       Foreground="WhiteSmoke" 
                                                                                       Margin="0,0,0,4" />
                                                                            
                                                                            <!-- ItemsRepeater for cargo images -->
                                                                            <ItemsRepeater Grid.Row="1" ItemsSource="{x:Bind Images, Mode=OneWay}">
                                                                                <ItemsRepeater.Layout>
                                                                                    <StackLayout Orientation="Horizontal" Spacing="8" />
                                                                                </ItemsRepeater.Layout>
                                                                                <ItemsRepeater.ItemTemplate>
                                                                                    <DataTemplate x:DataType="models:CargoImageDto">
                                                                                        <Grid Width="100" Height="100" CornerRadius="4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                                                                                            <Image Source="{x:Bind Url, Mode=OneWay}" 
                                                                                                   Stretch="UniformToFill" 
                                                                                                   VerticalAlignment="Center" 
                                                                                                   HorizontalAlignment="Center" />
                                                                                            <!-- Delete button overlay -->
                                                                                            <Button Click="DeleteCargoImageButton_Click"
                                                                                                    Tag="{x:Bind}"
                                                                                                    HorizontalAlignment="Right"
                                                                                                    VerticalAlignment="Top"
                                                                                                    Background="#CC000000"
                                                                                                    Padding="4"
                                                                                                    MinHeight="20"
                                                                                                    MinWidth="20"
                                                                                                    Margin="0,2,2,0"
                                                                                                    CornerRadius="10"
                                                                                                    ToolTipService.ToolTip="Eliminar imagen">
                                                                                                <SymbolIcon Symbol="Cancel" Foreground="White" />
                                                                                            </Button>
                                                                                        </Grid>
                                                                                    </DataTemplate>
                                                                                </ItemsRepeater.ItemTemplate>
                                                                            </ItemsRepeater>
                                                                        </Grid>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ItemsRepeater.ItemTemplate>
                                                        </ItemsRepeater>
                                                    </ScrollViewer>

                                                    <!-- Total Sum NumberBox -->
                                                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0" Spacing="8">
                                                        <TextBlock Text="Total:" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="WhiteSmoke" />
                                                        <NumberBox
                                                            Value="{x:Bind TotalMonto, Mode=OneWay}"
                                                            IsEnabled="False"
                                                            Width="150"
                                                            SpinButtonPlacementMode="Hidden"
                                                            NumberFormatter="{x:Bind CurrencyFormatter}" />
                                                    </StackPanel>
                                                </Grid>
                                            </PivotItem>
                                        </Pivot>
                                    </Grid>
                                </StackPanel>

                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
