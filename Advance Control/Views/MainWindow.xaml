<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Advance_Control.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Advance_Control" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Title="Advance Control" mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition x:Name="NotificacionesColumn" Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal" Spacing="10" x:Name="TopBar">
                    <Button Click="LoginButton_Click" Content="Login" />
                    <Button Click="ToggleNotificaciones_Click" Content="Toggle Notificaciones" />
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <NavigationView
                    x:Name="nvSample" IsBackButtonVisible="Auto"
                    IsBackEnabled="{Binding IsBackEnabled, Mode=OneWay}">
                    <NavigationView.MenuItems>
                        <NavigationViewItem
                            Content="Operaciones" Icon="Calculator" Tag="Operaciones" />
                        <NavigationViewItem
                            Content="Asesoría" Icon="ContactInfo" Tag="Asesoria" />
                        <NavigationViewItem
                            Content="Mantenimiento" Icon="Repair" Tag="Mantenimiento" />
                        <NavigationViewItem
                            Content="Clientes" Icon="People" Tag="Clientes" />
                    </NavigationView.MenuItems>
                    <Frame x:Name="contentFrame" />
                </NavigationView>
            </Grid>

        </Grid>
        <Grid
            x:Name="Notificaciones" Grid.Row="0" Grid.Column="1"
            Visibility="{Binding IsNotificacionesVisible, Converter={StaticResource BoolToVisibilityConverter}}"
            Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <TextBlock 
                Grid.Row="0"
                FontFamily="Consolas" 
                FontWeight="Bold"
                FontSize="16"
                Text="NOTIFICACIONES"
                Margin="0,0,0,10" />
            
            <!-- Notification List -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Notificaciones}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border 
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,0,0,8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <!-- Título -->
                                        <TextBlock 
                                            Text="{Binding Titulo}"
                                            FontWeight="Bold"
                                            FontSize="14"
                                            TextWrapping="Wrap" />
                                        
                                        <!-- Nota -->
                                        <TextBlock 
                                            Text="{Binding Nota}"
                                            FontSize="12"
                                            TextWrapping="Wrap"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            Visibility="{Binding Nota, Converter={StaticResource NullToVisibilityConverter}}" />
                                        
                                        <!-- Fecha de Inicio -->
                                        <TextBlock 
                                            FontSize="11"
                                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                            Visibility="{Binding FechaHoraInicio, Converter={StaticResource NullToVisibilityConverter}}">
                                            <Run Text="Inicio: " />
                                            <Run Text="{Binding FechaHoraInicio, Converter={StaticResource DateTimeFormatConverter}}" />
                                        </TextBlock>
                                        
                                        <!-- Fecha Final -->
                                        <TextBlock 
                                            FontSize="11"
                                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                            Visibility="{Binding FechaHoraFinal, Converter={StaticResource NullToVisibilityConverter}}">
                                            <Run Text="Final: " />
                                            <Run Text="{Binding FechaHoraFinal, Converter={StaticResource DateTimeFormatConverter}}" />
                                        </TextBlock>
                                        
                                        <!-- Fecha de Creación -->
                                        <TextBlock 
                                            Text="{Binding FechaCreacion, Converter={StaticResource DateTimeFormatConverter}}"
                                            FontSize="10"
                                            Foreground="{ThemeResource TextFillColorDisabledBrush}" />
                                    </StackPanel>

                                    <!-- Delete Button -->
                                    <Button 
                                        Grid.Column="1"
                                        VerticalAlignment="Top"
                                        Padding="8"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding DataContext.EliminarNotificacionCommand, ElementName=RootGrid}"
                                        CommandParameter="{Binding Id}"
                                        ToolTipService.ToolTip="Eliminar notificación">
                                        <SymbolIcon Symbol="Delete" />
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        <Grid
            Grid.Row="1" Grid.ColumnSpan="2" Background="Green">
            <TextBlock
                FontFamily="Consolas" FontSize="8" Text="EN LINEA" />
        </Grid>
    </Grid>


</Window>
