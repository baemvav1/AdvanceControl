<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Advance_Control.Views.Pages.EsCuentaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Advance_Control.Views.Pages"
    xmlns:models="using:Advance_Control.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título y botón de carga -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,20">
            <TextBlock Text="Estado de Cuenta" 
                       Style="{StaticResource TitleTextBlockStyle}"
                       VerticalAlignment="Center"/>
            <Button x:Name="BtnCargarXml" 
                    Content="Cargar Archivo XML" 
                    Click="BtnCargarXml_Click"
                    IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="O"/>
                </Button.KeyboardAccelerators>
            </Button>
        </StackPanel>

        <!-- Indicador de carga -->
        <ProgressRing Grid.Row="1" 
                      IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                      Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                      Width="40" Height="40"
                      Margin="0,0,0,10"/>

        <!-- Mensajes de error y éxito -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <InfoBar x:Name="ErrorInfoBar"
                     IsOpen="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                     Severity="Error"
                     Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                     IsClosable="True"/>
            
            <InfoBar x:Name="SuccessInfoBar"
                     IsOpen="{x:Bind ViewModel.SuccessMessage, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                     Severity="Success"
                     Message="{x:Bind ViewModel.SuccessMessage, Mode=OneWay}"
                     IsClosable="True"
                     Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Contenido del estado de cuenta -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20" Visibility="{x:Bind ViewModel.EstadoCuenta, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                
                <!-- Información general -->
                <StackPanel>
                    <TextBlock Text="Información General" 
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Banco:" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Bind ViewModel.EstadoCuenta.Banco, Mode=OneWay}" Margin="10,5"/>
                        
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Sucursal:" FontWeight="SemiBold" Margin="20,5,0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="{x:Bind ViewModel.EstadoCuenta.Sucursal, Mode=OneWay}" Margin="10,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Titular:" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{x:Bind ViewModel.EstadoCuenta.Titular, Mode=OneWay}" Margin="10,5"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="Número Cuenta:" FontWeight="SemiBold" Margin="20,5,0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="{x:Bind ViewModel.EstadoCuenta.NumeroCuenta, Mode=OneWay}" Margin="10,5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Período:" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{x:Bind ViewModel.EstadoCuenta.Periodo, Mode=OneWay}" Margin="10,5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Fecha Inicio:" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{x:Bind ViewModel.EstadoCuenta.FechaInicio, Mode=OneWay}" Margin="10,5"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="2" Text="Fecha Fin:" FontWeight="SemiBold" Margin="20,5,0,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="3" Text="{x:Bind ViewModel.EstadoCuenta.FechaFin, Mode=OneWay}" Margin="10,5"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Saldo Inicial:" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{x:Bind ViewModel.EstadoCuenta.SaldoInicial, Mode=OneWay}" Margin="10,5"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="2" Text="Saldo Final:" FontWeight="SemiBold" Margin="20,5,0,5"/>
                        <TextBlock Grid.Row="4" Grid.Column="3" Text="{x:Bind ViewModel.EstadoCuenta.SaldoFinal, Mode=OneWay}" Margin="10,5"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Total Cargos:" FontWeight="SemiBold" Margin="0,5"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{x:Bind ViewModel.EstadoCuenta.TotalCargos, Mode=OneWay}" Margin="10,5"/>
                        
                        <TextBlock Grid.Row="5" Grid.Column="2" Text="Total Abonos:" FontWeight="SemiBold" Margin="20,5,0,5"/>
                        <TextBlock Grid.Row="5" Grid.Column="3" Text="{x:Bind ViewModel.EstadoCuenta.TotalAbonos, Mode=OneWay}" Margin="10,5"/>
                    </Grid>
                </StackPanel>

                <!-- Lista de transacciones -->
                <StackPanel>
                    <TextBlock Text="Transacciones" 
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Margin="0,0,0,10"/>
                    <ListView ItemsSource="{x:Bind ViewModel.Transacciones, Mode=OneWay}"
                              SelectionMode="None"
                              IsItemClickEnabled="False">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Transaccion">
                                <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Padding="10"
                                        Margin="0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                                   Text="{x:Bind Fecha}" 
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,15,0"/>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                                   Text="{x:Bind Descripcion}" 
                                                   TextWrapping="Wrap"/>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="2" 
                                                   Text="{x:Bind Tipo}" 
                                                   Margin="15,0"/>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="3" 
                                                   Text="{x:Bind Monto}" 
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Right"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Text="{x:Bind Referencia}" 
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   FontSize="12"
                                                   Margin="0,5,0,0"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="3" 
                                                   Text="{x:Bind Saldo}" 
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,5,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
