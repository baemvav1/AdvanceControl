<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Advance_Control.Views.Dialogs.RefaccionesViewerUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="400"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Spacing="12">
            <!--  Loading indicator  -->
            <ProgressRing
                x:Name="LoadingRing"
                Width="50"
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsActive="False"
                Visibility="Collapsed" />

            <!--  Content  -->
            <StackPanel x:Name="ContentPanel" Spacing="12" Visibility="Collapsed">
                <!--  ID Badge  -->
                <Border
                    Padding="12,8"
                    HorizontalAlignment="Left"
                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                    CornerRadius="4">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White">
                        <Run Text="ID: " />
                        <Run x:Name="IdTextRun" />
                    </TextBlock>
                </Border>

                <!--  Marca  -->
                <StackPanel Spacing="4">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Marca" />
                    <TextBlock
                        x:Name="MarcaTextBlock"
                        FontSize="16"
                        FontWeight="SemiBold"
                        TextWrapping="Wrap" />
                </StackPanel>

                <!--  Serie  -->
                <StackPanel Spacing="4">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Serie" />
                    <TextBlock
                        x:Name="SerieTextBlock"
                        FontSize="14"
                        TextWrapping="Wrap" />
                </StackPanel>

                <!--  Costo  -->
                <StackPanel Spacing="4">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Costo" />
                    <TextBlock
                        x:Name="CostoTextBlock"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource SystemFillColorSuccessBrush}" />
                </StackPanel>

                <!--  Descripción  -->
                <StackPanel Spacing="4">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Descripción" />
                    <Border
                        Padding="12"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                        <TextBlock
                            x:Name="DescripcionTextBlock"
                            FontSize="13"
                            TextWrapping="Wrap" />
                    </Border>
                </StackPanel>

                <!--  Estatus  -->
                <StackPanel Spacing="4">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="Estatus" />
                    <Border
                        x:Name="EstatusBorder"
                        Padding="8,4"
                        HorizontalAlignment="Left"
                        CornerRadius="4">
                        <TextBlock
                            x:Name="EstatusTextBlock"
                            FontSize="13"
                            FontWeight="SemiBold" />
                    </Border>
                </StackPanel>
            </StackPanel>

            <!--  Error message  -->
            <TextBlock
                x:Name="ErrorTextBlock"
                HorizontalAlignment="Center"
                FontSize="14"
                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                Text="Error al cargar la refacción"
                TextWrapping="Wrap"
                Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</UserControl>
