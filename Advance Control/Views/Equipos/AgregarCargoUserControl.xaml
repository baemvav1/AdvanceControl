<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Advance_Control.Views.Equipos.AgregarCargoUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Advance_Control.Converters"
    xmlns:equipos="using:Advance_Control.Views.Equipos"
    mc:Ignorable="d"
    MinWidth="500"
    MinHeight="600">

    <UserControl.Resources>
        <converters:CargoTypeToVisibilityConverter x:Key="CargoTypeToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ID Operación (readonly) -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="ID Operación:" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBlock x:Name="IdOperacionTextBlock" FontSize="14" />
        </StackPanel>

        <!-- ID Tipo Cargo -->
        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="Tipo de Cargo:" FontWeight="SemiBold" Margin="0,0,0,4" />
            <ComboBox
                x:Name="TipoCargoComboBox"
                HorizontalAlignment="Stretch"
                SelectionChanged="TipoCargoComboBox_SelectionChanged"
                AutomationProperties.Name="Tipo de cargo">
                <ComboBoxItem Content="Refacción" Tag="1" />
                <ComboBoxItem Content="Servicio" Tag="2" />
            </ComboBox>
        </StackPanel>

        <!-- Selectors Grid - embedded with visibility toggling -->
        <Grid Grid.Row="2" Margin="0,0,0,12">
            <!-- Refaccion Selector -->
            <equipos:SeleccionarRefaccionUserControl 
                x:Name="RefaccionSelector"
                Visibility="{x:Bind SelectedCargoType, Mode=OneWay, Converter={StaticResource CargoTypeToVisibilityConverter}, ConverterParameter='1'}" />
            
            <!-- Servicio Selector -->
            <equipos:SeleccionarServicioUserControl 
                x:Name="ServicioSelector"
                Visibility="{x:Bind SelectedCargoType, Mode=OneWay, Converter={StaticResource CargoTypeToVisibilityConverter}, ConverterParameter='2'}" />
        </Grid>

        <!-- Monto -->
        <StackPanel Grid.Row="3" Margin="0,0,0,12">
            <TextBlock Text="Monto:" FontWeight="SemiBold" Margin="0,0,0,4" />
            <NumberBox
                x:Name="MontoNumberBox"
                PlaceholderText="Ingrese monto (mayor a 0)"
                SpinButtonPlacementMode="Compact"
                Minimum="0.01"
                Maximum="999999.99"
                SmallChange="0.01"
                LargeChange="1"
                AutomationProperties.Name="Monto del cargo" />
        </StackPanel>

        <!-- Nota -->
        <StackPanel Grid.Row="4" Margin="0,0,0,0">
            <TextBlock Text="Nota (opcional):" FontWeight="SemiBold" Margin="0,0,0,4" />
            <TextBox
                x:Name="NotaTextBox"
                PlaceholderText="Ingrese una nota (opcional)..."
                AcceptsReturn="True"
                TextWrapping="Wrap"
                MinHeight="80"
                MaxHeight="120" />
        </StackPanel>
    </Grid>
</UserControl>
