<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Advance_Control.Views.OperacionesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Advance_Control.Converters"
    xmlns:local="using:Advance_Control.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BooleanToCornerRadiusConverter x:Key="BooleanToCornerRadiusConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToExpandTextConverter x:Key="BooleanToExpandTextConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:CurrencyConverter x:Key="CurrencyConverter" />
        <converters:RefaccionVisibilityConverter x:Key="RefaccionVisibilityConverter" />
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0" Margin="0,0,0,24" Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock
                    FontSize="32" FontWeight="Bold" Text="Operaciones" />
            </StackPanel>
            <TextBlock
                FontSize="16"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="Gestión de operaciones del sistema" />
        </StackPanel>

        <!--  Filtros  -->
        <StackPanel
            Grid.Row="1" Margin="0,0,0,16" Spacing="12">
            <TextBlock
                FontSize="16" FontWeight="SemiBold" Text="Filtros de búsqueda" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- First row of filters -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,8">
                    <TextBlock Text="ID Tipo" Margin="0,0,0,4" />
                    <ComboBox
                        x:Name="IdTipoComboBox"
                        HorizontalAlignment="Stretch"
                        SelectedIndex="{x:Bind ViewModel.IdTipoFilter, Mode=TwoWay}">
                        <ComboBoxItem Content="0 : Todos" />
                        <ComboBoxItem Content="1 : Correctivo" />
                        <ComboBoxItem Content="2 : Preventivo" />
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,8,8">
                    <TextBlock Text="Cliente" Margin="0,0,0,4" />
                    <Button
                        x:Name="SelectClienteButton"
                        HorizontalAlignment="Stretch"
                        Click="SelectClienteButton_Click">
                        <TextBlock Text="{x:Bind ViewModel.SelectedClienteText, Mode=OneWay, FallbackValue='Seleccionar cliente...'}" />
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,8">
                    <TextBlock Text="Equipo" Margin="0,0,0,4" />
                    <Button
                        x:Name="SelectEquipoButton"
                        HorizontalAlignment="Stretch"
                        Click="SelectEquipoButton_Click">
                        <TextBlock Text="{x:Bind ViewModel.SelectedEquipoText, Mode=OneWay, FallbackValue='Seleccionar equipo...'}" />
                    </Button>
                </StackPanel>

                <!-- Second row of filters -->
                <TextBox
                    Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" Header="ID Atiende"
                    PlaceholderText="Buscar por ID atiende"
                    Text="{x:Bind ViewModel.IdAtiendeFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="1" Grid.Column="1" Margin="0,0,8,8" Header="Nota"
                    PlaceholderText="Buscar por nota"
                    Text="{x:Bind ViewModel.NotaFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel
                    Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" Orientation="Horizontal" Spacing="8">
                    <Button
                        Click="SearchButton_Click" Content="Buscar"
                        Style="{StaticResource AccentButtonStyle}" />
                    <Button Click="ClearButton_Click" Content="Limpiar" />
                </StackPanel>
            </Grid>
        </StackPanel>

        <!--  Lista de operaciones  -->
        <Grid Grid.Row="2">
            <!--  Loading indicator  -->
            <ProgressRing
                Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />

            <!--  ItemsRepeater con ScrollViewer  -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Operaciones, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="0" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate xmlns:local="using:Advance_Control.Models" x:DataType="local:OperacionDto">
                            <Grid Margin="0,5,20,5">
                                <StackPanel Orientation="Vertical">
                                    <Grid
                                        x:Name="Head" Grid.Row="0" MinHeight="90" Padding="16"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,0,0,1"
                                        CornerRadius="{x:Bind Expand, Converter={StaticResource BooleanToCornerRadiusConverter}, ConverterParameter='8,8,0,0|8', Mode=OneWay}"
                                        Tag="{x:Bind}"
                                        Tapped="HeadGrid_Tapped">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Información principal de la operación  -->
                                        <StackPanel Grid.Column="0" Spacing="6">
                                            <TextBlock
                                                FontSize="16" FontWeight="SemiBold"
                                                Text="{x:Bind Identificador}" />
                                            <StackPanel Orientation="Horizontal" Spacing="20">
                                                <TextBlock FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="Cliente: " />
                                                    <Run FontWeight="SemiBold" Text="{x:Bind RazonSocial}" />
                                                </TextBlock>
                                                <TextBlock FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="Atiende: " />
                                                    <Run FontWeight="SemiBold" Text="{x:Bind Atiende}" />
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <!--  Botón para expandir/colapsar  -->
                                        <Button
                                            Grid.Column="1" VerticalAlignment="Center" Background="Transparent" BorderThickness="0"
                                            Click="ToggleExpandButton_Click"
                                            Content="{x:Bind Expand, Converter={StaticResource BooleanToExpandTextConverter}, Mode=OneWay}"
                                            Tag="{x:Bind}" />
                                    </Grid>
                                    <Grid
                                        x:Name="Body" Grid.Row="1" Padding="8" Background="Black"
                                        CornerRadius="{x:Bind Expand, Converter={StaticResource BooleanToCornerRadiusConverter}, ConverterParameter='0,0,8,8|0', Mode=OneWay}"
                                        Visibility="{x:Bind Expand, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                                        <Pivot>
                                            <!-- Información de la Operación -->
                                            <PivotItem Header="Información">
                                                <Grid Padding="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <StackPanel
                                                        Grid.Row="0" Grid.Column="0" Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="ID Tipo:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind IdTipo}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="0" Grid.Column="1" Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Monto:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind Monto}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="1" Grid.Column="0" Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Razón Social:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind RazonSocial}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="1" Grid.Column="1" Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Fecha Inicio:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind FechaInicio}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="2" Grid.Column="0" Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Identificador Equipo:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind Identificador}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="2" Grid.Column="1" Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Fecha Final:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind FechaFinal}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="3" Grid.Column="0" Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Atiende:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind Atiende}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="3" Grid.Column="1" Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Finalizado:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind Finalizado}" />
                                                    </StackPanel>
                                                </Grid>
                                            </PivotItem>

                                            <!-- Nota -->
                                            <PivotItem Header="Nota">
                                                <StackPanel Padding="8">
                                                    <TextBlock
                                                        FontSize="13" Foreground="WhiteSmoke"
                                                        Text="{x:Bind Nota}"
                                                        TextWrapping="Wrap"
                                                        Visibility="{x:Bind Nota, Converter={StaticResource NullToVisibilityConverter}}" />
                                                </StackPanel>
                                            </PivotItem>

                                            <!-- Acciones -->
                                            <PivotItem Header="Acciones">
                                                <StackPanel Padding="8" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                                                    <Button
                                                        AutomationProperties.Name="Eliminar operación"
                                                        Click="DeleteOperacionButton_Click"
                                                        Tag="{x:Bind}"
                                                        ToolTipService.ToolTip="Eliminar operación">
                                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                                            <SymbolIcon Symbol="Delete" />
                                                            <TextBlock Text="Eliminar" />
                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </PivotItem>

                                            <!-- Cargos -->
                                            <PivotItem Header="Cargos">
                                                <Grid Padding="8">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <!-- Buttons for Add/Delete -->
                                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                                                        <Button
                                                            Click="AddCargoButton_Click"
                                                            Tag="{x:Bind}"
                                                            Style="{StaticResource AccentButtonStyle}">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Add" />
                                                                <TextBlock Text="Agregar Cargo" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Click="GenerarCotizacionButton_Click"
                                                            Tag="{x:Bind}"
                                                            Background="{ThemeResource SystemAccentColorLight1}">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Document" />
                                                                <TextBlock Text="Generar Cotización" />
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>

                                                    <!-- DataGrid for Cargos -->
                                                    <controls:DataGrid
                                                        Grid.Row="1"
                                                        x:Name="CargosDataGrid"
                                                        ItemsSource="{x:Bind Cargos, Mode=OneWay}"
                                                        AutoGenerateColumns="False"
                                                        CanUserReorderColumns="False"
                                                        CanUserSortColumns="True"
                                                        GridLinesVisibility="All"
                                                        HeadersVisibility="Column"
                                                        IsReadOnly="False"
                                                        SelectionMode="Single"
                                                        KeyDown="CargosDataGrid_KeyDown"
                                                        CellEditEnding="CargosDataGrid_CellEditEnding"
                                                        Tag="{x:Bind}">
                                                        <controls:DataGrid.Columns>
                                                            <controls:DataGridTextColumn
                                                                Header="Tipo Cargo"
                                                                Binding="{Binding TipoCargo, Mode=OneWay}"
                                                                IsReadOnly="True"
                                                                Width="120" />
                                                            <controls:DataGridTextColumn
                                                                Header="Detalle"
                                                                Binding="{Binding DetalleRelacionado, Mode=OneWay}"
                                                                IsReadOnly="True"
                                                                Width="150" />
                                                            <controls:DataGridTextColumn
                                                                Header="Cantidad"
                                                                Binding="{Binding Cantidad, Mode=TwoWay}"
                                                                Width="80" />
                                                            <controls:DataGridTextColumn
                                                                Header="Unitario"
                                                                Binding="{Binding Unitario, Mode=TwoWay, Converter={StaticResource CurrencyConverter}}"
                                                                Width="100" />
                                                            <controls:DataGridTextColumn
                                                                Header="Monto"
                                                                Binding="{Binding Monto, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                                                IsReadOnly="True"
                                                                Width="100" />
                                                            <controls:DataGridTextColumn
                                                                Header="Nota"
                                                                Binding="{Binding Nota, Mode=TwoWay}"
                                                                Width="150" />
                                                            <controls:DataGridTextColumn
                                                                Header="Proveedor"
                                                                Binding="{Binding Proveedor}"
                                                                IsReadOnly="True"
                                                                Width="*" />
                                                            <controls:DataGridTemplateColumn Header="Acciones" Width="Auto">
                                                                <controls:DataGridTemplateColumn.CellTemplate>
                                                                    <DataTemplate xmlns:models="using:Advance_Control.Models" x:DataType="models:CargoDto">
                                                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                                                            <Button
                                                                                Click="DeleteCargoButton_Click"
                                                                                Tag="{x:Bind}"
                                                                                Background="Transparent"
                                                                                ToolTipService.ToolTip="Eliminar cargo">
                                                                                <SymbolIcon Symbol="Delete" />
                                                                            </Button>
                                                                            <Button
                                                                                Click="ViewRefaccionFromCargoButton_Click"
                                                                                Tag="{x:Bind}"
                                                                                Background="Transparent"
                                                                                ToolTipService.ToolTip="Ver detalles de refacción"
                                                                                Visibility="{x:Bind TipoCargo, Converter={StaticResource RefaccionVisibilityConverter}}">
                                                                                <SymbolIcon Symbol="View" />
                                                                            </Button>
                                                                        </StackPanel>
                                                                    </DataTemplate>
                                                                </controls:DataGridTemplateColumn.CellTemplate>
                                                            </controls:DataGridTemplateColumn>
                                                        </controls:DataGrid.Columns>
                                                    </controls:DataGrid>

                                                    <!-- Total Sum NumberBox -->
                                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0" Spacing="8">
                                                        <TextBlock Text="Total:" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="WhiteSmoke" />
                                                        <NumberBox
                                                            Value="{x:Bind TotalMonto, Mode=OneWay}"
                                                            IsEnabled="False"
                                                            Width="150"
                                                            SpinButtonPlacementMode="Hidden"
                                                            NumberFormatter="{x:Bind CurrencyFormatter}" />
                                                    </StackPanel>
                                                </Grid>
                                            </PivotItem>
                                        </Pivot>
                                    </Grid>
                                </StackPanel>

                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
