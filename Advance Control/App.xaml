<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="Advance_Control.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Advance_Control.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  WinUI controls resources (necesario para estilos de controles)  -->
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!--  Other merged dictionaries here  -->
            </ResourceDictionary.MergedDictionaries>

            <!--  Global converters / recursos  -->
            <converters:BooleanToSystemColorBrushConverter
                x:Key="Green_transparentBoolColorConverter"
                FalseColorName="Transparent"
                TrueColorName="Green" />

            <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

            <converters:BoolNegationConverter x:Key="BoolNegationConverter" />

            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />

            <converters:DateTimeFormatConverter x:Key="DateTimeFormatConverter" />

            <converters:BooleanToArrowConverter x:Key="BoolToArrowConverter" />

            <converters:BooleanToSystemColorBrushConverter
                x:Key="NotificationColorConverter"
                FalseColorName="Gray"
                TrueColorName="Green" />

            <!--  Other app resources here  -->
        </ResourceDictionary>
    </Application.Resources>
</Application>