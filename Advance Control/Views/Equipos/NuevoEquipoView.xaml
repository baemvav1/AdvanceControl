<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Advance_Control.Views.Equipos.NuevoEquipoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Advance_Control.Views.Equipos"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        Padding="20"
        Background="{ThemeResource LayerFillColorDefaultBrush}"
        CornerRadius="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="4"
            FontWeight="SemiBold"
            Text="Marca: *" />
        <TextBox
            x:Name="MarcaTextBox"
            Grid.Row="1"
            Width="300"
            Margin="4,4,4,12"
            PlaceholderText="Ingrese la marca del equipo"
            Text="{x:Bind ViewModel.Marca, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock
            Grid.Row="2"
            Margin="4"
            FontWeight="SemiBold"
            Text="Año de Creación: *" />
        <TextBox
            x:Name="CreadoTextBox"
            Grid.Row="3"
            Width="300"
            Margin="4,4,4,12"
            InputScope="Number"
            PlaceholderText="Ej: 2023"
            Text="{x:Bind ViewModel.CreadoText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock
            Grid.Row="4"
            Margin="4"
            FontWeight="SemiBold"
            Text="Identificador: *" />
        <TextBox
            x:Name="IdentificadorTextBox"
            Grid.Row="5"
            Width="300"
            Margin="4,4,4,12"
            PlaceholderText="Identificador único del equipo"
            Text="{x:Bind ViewModel.Identificador, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock
            Grid.Row="6"
            Margin="4"
            FontWeight="SemiBold"
            Text="Descripción:" />
        <TextBox
            x:Name="DescripcionTextBox"
            Grid.Row="7"
            Width="300"
            Height="80"
            Margin="4,4,4,12"
            AcceptsReturn="True"
            PlaceholderText="Descripción del equipo (opcional)"
            Text="{x:Bind ViewModel.Descripcion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />

        <!--  Error Message Display  -->
        <InfoBar
            x:Name="ErrorInfoBar"
            Grid.Row="8"
            Margin="4,0,4,12"
            IsOpen="{x:Bind ViewModel.HasError, Mode=OneWay}"
            Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
            Severity="Error" />

        <StackPanel
            Grid.Row="9"
            Margin="4"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="8">
            <Button
                x:Name="SaveButton"
                Click="SaveButton_Click"
                Content="Guardar"
                IsEnabled="{x:Bind ViewModel.CanSave, Mode=OneWay}"
                Style="{StaticResource AccentButtonStyle}" />
            <Button
                x:Name="CancelButton"
                Click="CancelButton_Click"
                Content="Cancelar" />
        </StackPanel>
    </Grid>
</UserControl>
