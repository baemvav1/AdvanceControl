<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Advance_Control.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Advance_Control" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Title="Advance Control" mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal" Spacing="8" Padding="8">
                <Button Content="Login" Click="LoginButton_Click"/>
                <Button Click="ToggleNotifications_Click">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <SymbolIcon Symbol="Message"/>
                        <TextBlock Text="Notificaciones"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <NavigationView x:Name="nvSample" IsBackButtonVisible="Auto" IsBackEnabled="{Binding IsBackEnabled, Mode=OneWay}">
                <NavigationView.MenuItems>
                    <NavigationViewItem
                        Content="Operaciones" Icon="Calculator" Tag="Operaciones" />
                    <NavigationViewItem
                        Content="Asesoría" Icon="ContactInfo" Tag="Asesoria" />
                    <NavigationViewItem
                        Content="Mantenimiento" Icon="Repair" Tag="Mantenimiento" />
                    <NavigationViewItem
                        Content="Clientes" Icon="People" Tag="Clientes" />
                </NavigationView.MenuItems>
                <Frame x:Name="contentFrame" />
            </NavigationView>
        </Grid>
        <Grid x:Name="Notificaciones" Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
              BorderThickness="0,1,0,0"
              MaxHeight="300"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0" Background="{ThemeResource AccentFillColorDefaultBrush}" Padding="12,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Notificaciones" 
                           FontWeight="SemiBold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Content="Limpiar" 
                            Click="ClearNotifications_Click"
                            Style="{StaticResource AccentButtonStyle}"
                            FontSize="12"
                            Padding="8,4"/>
                    <Button Content="✕" 
                            Click="ToggleNotifications_Click"
                            Style="{StaticResource AccentButtonStyle}"
                            FontSize="16"
                            Padding="8,4"/>
                </StackPanel>
            </Grid>

            <!-- Notifications List -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding NotificationService.Notificaciones, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource LayerFillColorDefaultBrush}" 
                                    BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                    BorderThickness="0,0,0,1"
                                    Padding="12,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock Text="{Binding Titulo}" 
                                                   FontWeight="SemiBold"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Nota}" 
                                                   TextWrapping="Wrap"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock Text="{Binding FechaHoraInicio}" 
                                                   FontSize="12"
                                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                    </StackPanel>
                                    <Button Grid.Column="1" 
                                            Content="✕" 
                                            Click="RemoveNotification_Click"
                                            Tag="{Binding}"
                                            FontSize="12"
                                            Padding="8,4"
                                            VerticalAlignment="Top"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Row="3" Background="Green">
            
        </Grid>
    </Grid>


</Window>
