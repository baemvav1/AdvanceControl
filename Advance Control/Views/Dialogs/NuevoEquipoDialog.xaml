<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Advance_Control.Views.Dialogs.NuevoEquipoDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Advance_Control.Views.Dialogs" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">

    <Grid
        Padding="20"
        Background="{ThemeResource LayerFillColorDefaultBrush}"
        CornerRadius="8"
        MinWidth="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Marca -->
        <TextBlock
            Grid.Row="0" Margin="4" FontWeight="SemiBold" Text="Marca: *" />
        <TextBox
            x:Name="MarcaTextBox" Grid.Row="1" Margin="4,4,4,12"
            PlaceholderText="Ingrese la marca del equipo"
            Text="{x:Bind Marca, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <!-- Identificador -->
        <TextBlock
            Grid.Row="2" Margin="4" FontWeight="SemiBold" Text="Identificador: *" />
        <TextBox
            x:Name="IdentificadorTextBox" Grid.Row="3" Margin="4,4,4,12"
            PlaceholderText="Ingrese el identificador del equipo"
            Text="{x:Bind Identificador, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <!-- Año de Creación -->
        <TextBlock
            Grid.Row="4" Margin="4" FontWeight="SemiBold" Text="Año de Creación: *" />
        <NumberBox
            x:Name="CreadoNumberBox" Grid.Row="5" Margin="4,4,4,12"
            PlaceholderText="Año de creación"
            Value="{x:Bind Creado, Mode=TwoWay}"
            Minimum="1900"
            Maximum="2100"
            SpinButtonPlacementMode="Compact" />

        <!-- Descripción -->
        <TextBlock
            Grid.Row="6" Margin="4" FontWeight="SemiBold" Text="Descripción:" />
        <TextBox
            x:Name="DescripcionTextBox" Grid.Row="7" Margin="4,4,4,12"
            PlaceholderText="Ingrese una descripción del equipo (opcional)"
            Text="{x:Bind Descripcion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            Height="80" />

        <!-- Nota de campos requeridos -->
        <TextBlock
            Grid.Row="8" Margin="4" FontSize="12"
            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
            Text="* Campos obligatorios" />
    </Grid>
</UserControl>
