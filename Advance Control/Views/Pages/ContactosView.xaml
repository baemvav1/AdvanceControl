<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Advance_Control.Views.Pages.ContactosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Advance_Control.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Advance_Control.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BooleanToCornerRadiusConverter x:Key="BooleanToCornerRadiusConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToExpandTextConverter x:Key="BooleanToExpandTextConverter" />
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,24"
            Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock
                    FontSize="32"
                    FontWeight="Bold"
                    Text="Contactos" />
                <Button
                    x:Name="Nuevo"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="NuevoButton_Click"
                    ToolTipService.ToolTip="Crear nuevo contacto">
                    <SymbolIcon Symbol="Add" />
                </Button>
            </StackPanel>
            <TextBlock
                FontSize="16"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="Gestión de contactos del sistema" />
        </StackPanel>

        <!--  Filtros  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,16"
            Spacing="12">
            <TextBlock
                FontSize="16"
                FontWeight="SemiBold"
                Text="Filtros de búsqueda" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBox
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,8,8"
                    Header="Nombre"
                    PlaceholderText="Nombre del contacto"
                    Text="{x:Bind ViewModel.NombreFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,8,8"
                    Header="Apellido"
                    PlaceholderText="Apellido del contacto"
                    Text="{x:Bind ViewModel.ApellidoFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="0,0,8,8"
                    Header="Correo"
                    PlaceholderText="Correo electrónico"
                    Text="{x:Bind ViewModel.CorreoFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,8,8"
                    Header="Teléfono"
                    PlaceholderText="Teléfono del contacto"
                    Text="{x:Bind ViewModel.TelefonoFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,8,8"
                    Header="Departamento"
                    PlaceholderText="Departamento"
                    Text="{x:Bind ViewModel.DepartamentoFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel
                    Grid.Row="1"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal"
                    Spacing="8">
                    <Button
                        Click="SearchButton_Click"
                        Content="Buscar"
                        Style="{StaticResource AccentButtonStyle}" />
                    <Button Click="ClearButton_Click" Content="Limpiar" />
                </StackPanel>
            </Grid>
        </StackPanel>

        <!--  Lista de contactos  -->
        <Grid Grid.Row="2">
            <!--  Loading indicator  -->
            <ProgressRing
                Width="50"
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />

            <!--  ItemsRepeater con ScrollViewer  -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Contactos, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="0" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate xmlns:models="using:Advance_Control.Models" x:DataType="models:ContactoDto">
                            <Grid Margin="0,5,20,5">
                                <StackPanel Orientation="Vertical">
                                    <Grid
                                        x:Name="Head"
                                        Grid.Row="0"
                                        MinHeight="90"
                                        Padding="16"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,0,0,1"
                                        CornerRadius="{x:Bind Expand, Converter={StaticResource BooleanToCornerRadiusConverter}, ConverterParameter='8,8,0,0|8', Mode=OneWay}"
                                        Tag="{x:Bind}"
                                        Tapped="HeadGrid_Tapped">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Información principal del contacto  -->
                                        <StackPanel Grid.Column="0" Spacing="6">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="SemiBold"
                                                Text="{x:Bind NombreCompleto}" />
                                            <TextBlock
                                                FontSize="14"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Text="{x:Bind Cargo}" />
                                            <StackPanel Orientation="Horizontal" Spacing="20">
                                                <TextBlock FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="Correo: " />
                                                    <Run FontWeight="SemiBold" Text="{x:Bind Correo}" />
                                                </TextBlock>
                                                <TextBlock FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="Tel: " />
                                                    <Run FontWeight="SemiBold" Text="{x:Bind Telefono}" />
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <!--  Botón para expandir/colapsar  -->
                                        <Button
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="ToggleExpandButton_Click"
                                            Content="{x:Bind Expand, Converter={StaticResource BooleanToExpandTextConverter}, Mode=OneWay}"
                                            Tag="{x:Bind}" />
                                    </Grid>
                                    <Grid
                                        x:Name="Body"
                                        Grid.Row="1"
                                        Padding="8"
                                        Background="Black"
                                        CornerRadius="{x:Bind Expand, Converter={StaticResource BooleanToCornerRadiusConverter}, ConverterParameter='0,0,8,8|0', Mode=OneWay}"
                                        Visibility="{x:Bind Expand, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                                        <Pivot>
                                            <!--  Información de Contacto  -->
                                            <PivotItem Header="Información">
                                                <Grid Padding="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <StackPanel
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Departamento:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind Departamento}"
                                                            TextWrapping="Wrap" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Cargo:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind Cargo}"
                                                            TextWrapping="Wrap" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Código Interno:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind CodigoInterno}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Activo:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind Activo}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="2"
                                                        Grid.Column="0"
                                                        Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="ID Cliente:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind IdCliente}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="2"
                                                        Grid.Column="1"
                                                        Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="ID Proveedor:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind IdProveedor}" />
                                                    </StackPanel>
                                                </Grid>
                                            </PivotItem>

                                            <!--  Notas  -->
                                            <PivotItem Header="Notas">
                                                <StackPanel Padding="8">
                                                    <TextBlock
                                                        FontSize="13"
                                                        Foreground="WhiteSmoke"
                                                        Text="{x:Bind Notas}"
                                                        TextWrapping="Wrap" />
                                                </StackPanel>
                                            </PivotItem>

                                            <!--  Información de Auditoría  -->
                                            <PivotItem Header="Auditoría">
                                                <Grid Padding="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <StackPanel
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Contacto ID:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind ContactoId}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Credencial ID:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind CredencialId}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Creado En:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind CreadoEn}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="Gray"
                                                            Text="Actualizado En:" />
                                                        <TextBlock
                                                            FontSize="13"
                                                            Foreground="WhiteSmoke"
                                                            Text="{x:Bind ActualizadoEn}" />
                                                    </StackPanel>
                                                </Grid>
                                            </PivotItem>
                                        </Pivot>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
