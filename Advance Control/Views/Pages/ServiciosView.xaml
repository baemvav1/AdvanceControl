<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Advance_Control.Views.Pages.ServiciosView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:converters="using:Advance_Control.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="using:Advance_Control.Views" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BooleanToCornerRadiusConverter x:Key="BooleanToCornerRadiusConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToExpandTextConverter x:Key="BooleanToExpandTextConverter" />
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0" Margin="0,0,0,24" Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock
                    FontSize="32" FontWeight="Bold" Text="Servicios" />
                <Button
                    x:Name="Nuevo" VerticalAlignment="Center" Background="Transparent" BorderThickness="0"
                    Click="NuevoButton_Click" ToolTipService.ToolTip="Crear nuevo servicio">
                    <SymbolIcon Symbol="Add" />
                </Button>
            </StackPanel>
            <TextBlock
                FontSize="16"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="Gestión de servicios del sistema" />
        </StackPanel>

        <!--  Filtros  -->
        <StackPanel
            Grid.Row="1" Margin="0,0,0,16" Spacing="12">
            <TextBlock
                FontSize="16" FontWeight="SemiBold" Text="Filtros de búsqueda" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBox
                    Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" Header="Concepto"
                    PlaceholderText="Concepto del servicio"
                    Text="{x:Bind ViewModel.ConceptoFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="0" Grid.Column="1" Margin="0,0,8,8" Header="Descripción"
                    PlaceholderText="Búsqueda en descripción"
                    Text="{x:Bind ViewModel.DescripcionFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="0" Grid.Column="2" Margin="0,0,8,8" Header="Costo"
                    PlaceholderText="Costo del servicio"
                    Text="{x:Bind ViewModel.CostoFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel
                    Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" Orientation="Horizontal" Spacing="8">
                    <Button
                        Click="SearchButton_Click" Content="Buscar"
                        Style="{StaticResource AccentButtonStyle}" />
                    <Button Click="ClearButton_Click" Content="Limpiar" />
                </StackPanel>
            </Grid>
        </StackPanel>

        <!--  Lista de servicios  -->
        <Grid Grid.Row="2">
            <!--  Loading indicator  -->
            <ProgressRing
                Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />

            <!--  ItemsRepeater con ScrollViewer  -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Servicios, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="0" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate xmlns:local="using:Advance_Control.Models" x:DataType="local:ServicioDto">
                            <Grid Margin="0,5,20,5">
                                <StackPanel Orientation="Vertical">
                                    <Grid
                                        x:Name="Head" Grid.Row="0" MinHeight="90" Padding="16"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,0,0,1"
                                        CornerRadius="{x:Bind Expand, Converter={StaticResource BooleanToCornerRadiusConverter}, ConverterParameter='8,8,0,0|8', Mode=OneWay}"
                                        Tag="{x:Bind}"
                                        Tapped="HeadGrid_Tapped">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Información principal del servicio  -->
                                        <StackPanel Grid.Column="0" Spacing="6">
                                            <TextBlock
                                                FontSize="16" FontWeight="SemiBold"
                                                Text="{x:Bind Concepto}" />
                                            <TextBlock
                                                FontSize="14"
                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                Text="{x:Bind Descripcion}"
                                                TextTrimming="CharacterEllipsis" />
                                            <StackPanel Orientation="Horizontal" Spacing="20">
                                                <TextBlock FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="Costo: $" />
                                                    <Run FontWeight="SemiBold" Text="{x:Bind Costo}" />
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <!--  Botón para expandir/colapsar  -->
                                        <Button
                                            Grid.Column="1" VerticalAlignment="Center" Background="Transparent" BorderThickness="0"
                                            Click="ToggleExpandButton_Click"
                                            Content="{x:Bind Expand, Converter={StaticResource BooleanToExpandTextConverter}, Mode=OneWay}"
                                            Tag="{x:Bind}" />
                                    </Grid>
                                    <Grid
                                        x:Name="Body" Grid.Row="1" Padding="8" Background="Black"
                                        CornerRadius="{x:Bind Expand, Converter={StaticResource BooleanToCornerRadiusConverter}, ConverterParameter='0,0,8,8|0', Mode=OneWay}"
                                        Visibility="{x:Bind Expand, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}">
                                        <Pivot>
                                            <!--  Información del Servicio  -->
                                            <PivotItem Header="Información">
                                                <Grid Padding="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <StackPanel
                                                        Grid.Row="0" Grid.Column="0" Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="ID Servicio:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind IdServicio}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="0" Grid.Column="1" Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Concepto:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind Concepto}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="1" Grid.Column="0" Margin="0,4,0,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Costo:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind Costo}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="1" Grid.Column="1" Margin="0,4,8,0">
                                                        <TextBlock
                                                            FontSize="12" Foreground="Gray" Text="Estatus:" />
                                                        <TextBlock
                                                            FontSize="13" Foreground="WhiteSmoke"
                                                            Text="{x:Bind Estatus}" />
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,16,0,0" Orientation="Horizontal" Spacing="8">
                                                        <Button
                                                            Background="DarkOrange" BorderThickness="0"
                                                            Click="EditarButton_Click" Content="Editar" Foreground="White"
                                                            Tag="{x:Bind}" />
                                                        <Button
                                                            Background="DarkRed" BorderThickness="0"
                                                            Click="EliminarButton_Click" Content="Eliminar" Foreground="White"
                                                            Tag="{x:Bind}" />
                                                    </StackPanel>
                                                </Grid>
                                            </PivotItem>

                                            <!--  Descripción completa  -->
                                            <PivotItem Header="Descripción">
                                                <StackPanel Padding="8">
                                                    <TextBlock
                                                        FontSize="13" Foreground="WhiteSmoke"
                                                        Text="{x:Bind Descripcion}"
                                                        TextWrapping="Wrap" />
                                                </StackPanel>
                                            </PivotItem>
                                        </Pivot>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
