<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Advance_Control.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Advance_Control" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Title="Advance Control" mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Button Click="LoginButton_Click" Content="Login" />
            </Grid>
            <Grid Grid.Row="1">
                <NavigationView
                    x:Name="nvSample" IsBackButtonVisible="Auto"
                    IsBackEnabled="{Binding IsBackEnabled, Mode=OneWay}">
                    <NavigationView.MenuItems>
                        <NavigationViewItem
                            Content="Operaciones" Icon="Calculator" Tag="Operaciones" />
                        <NavigationViewItem
                            Content="AsesorÃ­a" Icon="ContactInfo" Tag="Asesoria" />
                        <NavigationViewItem
                            Content="Mantenimiento" Icon="Repair" Tag="Mantenimiento" />
                        <NavigationViewItem
                            Content="Clientes" Icon="People" Tag="Clientes" />
                    </NavigationView.MenuItems>
                    <Frame x:Name="contentFrame" />
                </NavigationView>
            </Grid>

        </Grid>
        <Grid
            x:Name="Notificaciones" Grid.Row="0" Grid.Column="1">
            <TextBlock FontFamily="Consolas" Text="NOTIFICACIONES" />
        </Grid>
        <Grid
            Grid.Row="1" Grid.ColumnSpan="2" Background="Green">
            <TextBlock
                FontFamily="Consolas" FontSize="8" Text="EN LINEA" />
        </Grid>
    </Grid>


</Window>
