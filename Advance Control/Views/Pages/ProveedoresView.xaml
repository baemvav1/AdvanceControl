<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Advance_Control.Views.ProveedoresView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:converters="using:Advance_Control.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="using:Advance_Control.Views" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BooleanToCornerRadiusConverter x:Key="BooleanToCornerRadiusConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToExpandTextConverter x:Key="BooleanToExpandTextConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0" Margin="0,0,0,24" Spacing="8">
            <TextBlock
                FontSize="32" FontWeight="Bold" Text="Proveedores" />
            <TextBlock
                FontSize="16"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                Text="Gestión de proveedores del sistema" />
        </StackPanel>

        <!--  Filtros  -->
        <StackPanel
            Grid.Row="1" Margin="0,0,0,16" Spacing="12">
            <TextBlock
                FontSize="16" FontWeight="SemiBold" Text="Filtros de búsqueda" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBox
                    Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" Header="RFC"
                    PlaceholderText="RFC del proveedor"
                    Text="{x:Bind ViewModel.RfcFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="0" Grid.Column="1" Margin="0,0,8,8" Header="Razón Social"
                    PlaceholderText="Razón social"
                    Text="{x:Bind ViewModel.RazonSocialFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="0" Grid.Column="2" Margin="0,0,8,8" Header="Nombre Comercial"
                    PlaceholderText="Nombre comercial"
                    Text="{x:Bind ViewModel.NombreComercialFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBox
                    Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" Header="Notas"
                    PlaceholderText="Búsqueda en notas"
                    Text="{x:Bind ViewModel.NotaFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel
                    Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" Orientation="Horizontal" Spacing="8">
                    <Button
                        Click="SearchButton_Click" Content="Buscar"
                        Style="{StaticResource AccentButtonStyle}" />
                    <Button Click="ClearButton_Click" Content="Limpiar" />
                </StackPanel>
            </Grid>
        </StackPanel>

        <!--  Lista de proveedores  -->
        <Grid Grid.Row="2">
            <!--  Loading indicator  -->
            <ProgressRing
                Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />

            <!--  ItemsRepeater con ScrollViewer  -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Proveedores, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <StackLayout Spacing="0" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate xmlns:local="using:Advance_Control.Models" x:DataType="local:ProveedorDto">
                            <Grid Margin="0,5,20,5">
                                <StackPanel Orientation="Vertical">
                                    <Grid
                                        Grid.Row="0" MinHeight="90" Padding="16"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,0,0,1" 
                                        CornerRadius="{x:Bind Expand, Converter={StaticResource BooleanToCornerRadiusConverter}, ConverterParameter='8,8,0,0|8', Mode=OneWay}"
                                        Tapped="HeadGrid_Tapped"
                                        Tag="{x:Bind}"
                                        x:Name="Head">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Información principal del proveedor  -->
                                        <StackPanel Grid.Column="0" Spacing="6">
                                            <TextBlock
                                                FontSize="16" FontWeight="SemiBold"
                                                Text="{x:Bind RazonSocial}" />
                                            <TextBlock
                                                FontSize="14"
                                                Text="{x:Bind NombreComercial}" />
                                            <StackPanel Orientation="Horizontal" Spacing="20">
                                                <TextBlock FontSize="13">
                                                    <Run Text="RFC: " />
                                                    <Run FontWeight="SemiBold" Text="{x:Bind Rfc}" />
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <!--  Botón para expandir/colapsar  -->
                                        <Button
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="ToggleExpandButton_Click"
                                            Tag="{x:Bind}"
                                            Content="{x:Bind Expand, Converter={StaticResource BooleanToExpandTextConverter}, Mode=OneWay}" />
                                    </Grid>
                                    <Grid
                                        Grid.Row="1" 
                                        Background="Black" 
                                        CornerRadius="{x:Bind Expand, Converter={StaticResource BooleanToCornerRadiusConverter}, ConverterParameter='0,0,8,8|0', Mode=OneWay}"
                                        Visibility="{x:Bind Expand, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"
                                        Padding="8"
                                        x:Name="Body">
                                        <Pivot>
                                            <!-- Información General -->
                                            <PivotItem Header="General">
                                                <Grid Padding="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    
                                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,4,8,0">
                                                        <TextBlock FontSize="12" Foreground="Gray" Text="ID Proveedor:" />
                                                        <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind IdProveedor}" />
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,4,0,0">
                                                        <TextBlock FontSize="12" Foreground="Gray" Text="Estatus:" />
                                                        <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind Estatus}" />
                                                    </StackPanel>
                                                    
                                                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,4,0,0">
                                                        <TextBlock FontSize="12" Foreground="Gray" Text="Nota:" />
                                                        <TextBlock FontSize="13" Foreground="WhiteSmoke" Text="{x:Bind Nota}" TextWrapping="Wrap" />
                                                    </StackPanel>
                                                </Grid>
                                            </PivotItem>

                                            <!-- Refacciones -->
                                            <PivotItem Header="Refacciones">
                                                <StackPanel Padding="8" Spacing="6">
                                                    <StackPanel Orientation="Horizontal" Spacing="5">
                                                        <TextBlock
                                                            FontSize="14" FontWeight="SemiBold" Foreground="Black" Text="Refacciones Relacionadas" />
                                                        <Button
                                                            x:Name="NuevaRelacionRefaccion" VerticalAlignment="Center" Background="Black" BorderThickness="0"
                                                            Click="NuevaRelacionRefaccion_Click" ToolTipService.ToolTip="Crear nueva relacion con refacción" Foreground="DarkGray"
                                                            Tag="{x:Bind}">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <SymbolIcon Symbol="Add" />
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>

                                                    <!--  Loading indicator for relaciones refaccion  -->
                                                    <ProgressRing
                                                        Width="20" Height="20" HorizontalAlignment="Left"
                                                        IsActive="{x:Bind IsLoadingRelacionesRefaccion, Mode=OneWay}"
                                                        Visibility="{x:Bind IsLoadingRelacionesRefaccion, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />

                                                    <!--  Lista de relaciones refaccion  -->
                                                    <ItemsRepeater ItemsSource="{x:Bind RelacionesRefaccion, Mode=OneWay}">
                                                        <ItemsRepeater.Layout>
                                                            <StackLayout Spacing="4" />
                                                        </ItemsRepeater.Layout>
                                                        <ItemsRepeater.ItemTemplate>
                                                            <DataTemplate xmlns:models="using:Advance_Control.Models" x:DataType="models:RelacionProveedorRefaccionDto">
                                                                <Border
                                                                    Padding="12" Background="DarkGray"
                                                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                                    BorderThickness="1" CornerRadius="4">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <StackPanel Grid.Column="0" Spacing="2">
                                                                            <TextBlock
                                                                                FontSize="13" FontWeight="SemiBold" Foreground="Black"
                                                                                Text="{x:Bind Marca}" />
                                                                            <TextBlock
                                                                                FontSize="12" Foreground="Gray"
                                                                                Text="{x:Bind Serie}" />
                                                                            <TextBlock
                                                                                FontSize="12" Foreground="Black">
                                                                                <Run Text="Precio: $" />
                                                                                <Run FontWeight="SemiBold" Text="{x:Bind Precio}" />
                                                                            </TextBlock>
                                                                            <TextBlock
                                                                                FontSize="11" FontStyle="Italic" Foreground="DimGray"
                                                                                Text="{x:Bind Nota}"
                                                                                TextWrapping="Wrap"
                                                                                Visibility="{x:Bind Nota, Converter={StaticResource NullToVisibilityConverter}}" />
                                                                        </StackPanel>
                                                                        <TextBlock
                                                                            Grid.Column="1" Margin="0,0,8,0" VerticalAlignment="Center" FontSize="11"
                                                                            Foreground="Gray">
                                                                            <Run Text="ID: " />
                                                                            <Run Text="{x:Bind IdRefaccion}" />
                                                                        </TextBlock>
                                                                        <StackPanel
                                                                            Grid.Column="2" VerticalAlignment="Center" Orientation="Horizontal" Spacing="4">
                                                                            <Button
                                                                                AutomationProperties.Name="Editar relación refacción" Background="Transparent" BorderThickness="0" Click="EditRelacionRefaccionButton_Click"
                                                                                Tag="{x:Bind}"
                                                                                ToolTipService.ToolTip="Editar precio/nota">
                                                                                <SymbolIcon Foreground="WhiteSmoke" Symbol="Edit" />
                                                                            </Button>
                                                                            <Button
                                                                                AutomationProperties.Name="Eliminar relación refacción" Background="Transparent" BorderThickness="0" Click="DeleteRelacionRefaccionButton_Click"
                                                                                Tag="{x:Bind}"
                                                                                ToolTipService.ToolTip="Eliminar relación">
                                                                                <SymbolIcon Foreground="WhiteSmoke" Symbol="Delete" />
                                                                            </Button>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsRepeater.ItemTemplate>
                                                    </ItemsRepeater>

                                                    <!--  Mensaje cuando no hay relaciones refaccion  -->
                                                    <TextBlock
                                                        FontSize="12" FontStyle="Italic" Foreground="Gray" Text="No hay refacciones relacionadas"
                                                        Visibility="{x:Bind ShowNoRelacionesRefaccionMessage, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}" />
                                                </StackPanel>
                                            </PivotItem>
                                        </Pivot>
                                    </Grid>
                                </StackPanel>

                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
